{% extends 'cards/card_base.html.twig' %}
{% import 'macros/_icons.html.twig' as icons %}

{# parameters #}
{%- set title = 'schema.index.title' -%}
{%- set title_description = 'schema.index.description' -%}
{%- set title_icon = 'table' -%}

{% block card_body -%}
<div class="table-responsive">
    <table class="table table-hover table-list table-sm">
        <thead>
            <tr>
                <th>{{ 'schema.index.fields.name'|trans }}</th>
                <th class="text-right">{{ 'schema.index.fields.count'|trans }}</th>
            </tr>
        </thead>
        <tbody data-link="row" class="rowlink">
        {% for table in tables %}
            {% set name = table.name %}
            <tr title="{{ 'schema.index.tooltip'|trans({'%name%': name}) }}">
                <td><a href="{{ path('schema_table', {'name': name}) }}">{{ name }}</a></td>
                <td class="text-right">{{ table.count|integer }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{%- endblock %}

{% block card_footer -%}
{{- icons.homepage() -}}
{%- endblock %}

{% block javascripts %}
{{ parent() }}
{{ asset_js('js/plugins/plugin-rowlink.js') }}
{%- endblock %}
