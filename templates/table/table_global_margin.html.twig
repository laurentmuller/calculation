{% extends 'table/table_base.html.twig' %}

{# parameters #}
{%- set title        = 'globalmargin.list.title' -%}
{%- set title_icon   = 'percent' -%}
{%- set defer_url    = url('table_globalmargin') -%}
{%- set save_url     = url('table_globalmargin_save') -%}
{%- set object_type  = EntityVoterInterface.ENTITY_GLOBAL_MARGIN -%}
{%- set allow_global = is_granted(EntityVoterInterface.ATTRIBUTE_EXPORT, object_type) -%}

{# classes #}
{% block card_container_class %} col-md-8 offset-md-2{% endblock -%}

{% block global_actions -%}
{{- _self.item_external(path('globalmargin_pdf'), 'globalmargin.list.pdf_title', 'file-pdf far') }}
{{- _self.item_external(path('globalmargin_excel'), 'globalmargin.list.excel_title', 'file-excel far') }}
{%- endblock %}

{% block show_actions -%}
{{- _self.item_path(path('globalmargin_show', params), 'globalmargin.show.title', 'tv', show_class) }}
{%- endblock %}

{% block edit_actions -%}
{{- _self.item_path(path('globalmargin_edit', params), 'globalmargin.edit.title', 'pencil-alt', edit_class) }}
{%- endblock %}

{% block delete_actions -%}
{{- _self.item_path(path('globalmargin_delete', params), 'globalmargin.delete.title', 'times', 'btn-delete') }}
{%- endblock %}

{% block add_actions -%}
{{- _self.item_separator() }}
{{- _self.item_path(path('globalmargin_add', params), 'globalmargin.add.title', 'file far', 'btn-add') }}
{%- endblock %}
