{% extends 'cards/card_edit.html.twig' %}
{% from 'macros/_margins_edit.html.twig' import printMargins %}
{% from 'macros/_timestampable.html.twig' import timestampable %}
{# parameters #}
{%- set title = new ? 'group.add.title' : 'group.edit.title' -%}
{%- set title_icon = ICON_GROUP -%}
{%- set page_list = 'group_table' -%}
{# body #}
{% block card_body %}
<div class="form-row">
    <div class="col-md-6">
        {{ form_row(form.code) }}
    </div>
</div>
{{ form_row(form.description) }}
{{ printMargins(form.margins) }}
{% endblock %}
{# footer #}
{% block card_footer -%}
    {{ parent() }}
    {% if not item.new %}
        <hr class="card-footer-line">
        {{ timestampable(item) }}
    {% endif %}
{% endblock %}
{# javascripts #}
{% block javascripts %}
{% if app.debug %}
{{ parent() }}
{{ asset_js('js/plugins/plugin-input-number.js') }}
{{ asset_js('js/application/margins_edit.js') }}
{% else %}
{{ asset_js('js/margins_edit.js') }}
{% endif %}
{% endblock %}
