{% extends 'cards/card_edit.html.twig' %}
{% from 'macros/_icons.html.twig' import footer_center %}
{# parameters #}
{%- set statusbar_show = false -%}
{# hide navigation and footer #}
{% block navigation_horizontal %}{% endblock navigation_horizontal %}
{% block navigation_vertical -%}{% endblock navigation_vertical %}
{# class styles #}
{% block card_container_class ' col-md-8 offset-md-2 col-xl-6 offset-xl-3 my-auto h-75' %}
{# header #}
{% block card_header -%}
{{ parent() }}
{%- if error|default(false) -%}
<p class="small text-danger mb-0">
    {{- error.messageKey|trans(error.messageData, 'security') -}}
</p>
{%- endif -%}
{%- endblock card_header %}
{# footer #}
{% block card_footer -%}
{{ parent() }}
{{ footer_center() }}
{% endblock card_footer %}
{# stylesheets #}
{% block stylesheets -%}
{{- asset_css('css/center.css') }}
{% endblock stylesheets %}
