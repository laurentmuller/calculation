/* global Highcharts */
{% trans_default_domain 'chart' %}
/**
 * @typedef Point
 * @property {string} color
 * @property {string} calculations
 * @property {string} calculations_percent
 * @property {string} net_amount
 * @property {string} margin_amount
 * @property {string} margin_percent
 * @property {string} total_amount
 * @property {string} total_percent
 */
function renderTooltip () {
    /** @var Point point */
    const point = this.point;
    let html = '<table class="m-1">';
    html +=
        '<tr>' +
        '<th>{{ 'fields.state'|trans }}</th>' +
        '<th class="px-1">:</th>' +
        '<th class="text-calculation">' +
            '<div class="d-flex align-items-center">' +
                '<span class="border me-1" style="width: 1rem; height: 0.75rem; background:' + point.color + '"></span>' +
                '<span>' + point.name + '</span>' +
            '</div>' +
        '</th>' +
        '<th class="text-calculation">&nbsp;</th>' +
        '</tr>';
    html += '<tr><td colspan="4"><hr class="my-1"></td></tr>';
    html +=
        '<tr>' +
        '<td>{{ 'fields.count'|trans }}</td>' +
        '<td class="px-1">:</td>' +
        '<td class="text-calculation">' + point.calculations + '</td>' +
        '<td class="text-calculation ps-3">' + point.calculations_percent + '</td>' +
        '</tr>';
    html +=
        '<tr>' +
        '<td>{{ 'fields.net'|trans }}</td>' +
        '<td class="px-1">:</td>' +
        '<td class="text-calculation">' + point.net_amount + '</td>' +
        '<td class="text-calculation">&nbsp;</td>' +
        '</tr>';
    html +=
        '<tr>' +
        '<td>{{ 'fields.margin'|trans }}</td>' +
        '<td class="px-1">:</td>' +
        '<td class="text-calculation">' + point.margin_amount + '</td>' +
        '<td class="text-calculation">' + point.margin_percent + '</td>' +
        '</tr>';
    html += '<tr><td colspan="4"><hr class="my-1"></td></tr>';
    html +=
        '<tr>' +
        '<th>{{ 'fields.total'|trans }}</th>' +
        '<th class="px-1">:</th>' +
        '<th class="text-calculation">' + point.total_amount + '</th>' +
        '<th class="text-calculation ps-3">' + point.total_percent + '</th>' +
        '</tr>';
    html += '</table>';
    return html;
}
