{# user menu #}
{% import 'macros/_icons.html.twig' as icons %}
{% if is_remembered -%}
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            {%- set image = vich_uploader_asset(app.user, 'imageFile')|replace({'192': '032'}) -%}
            {%- if asset_exists(image) -%}
                <img alt="{{ 'user.image.title'|trans }}" src="{{ asset(image) }}?{{ asset_time(image) }}" class="avatar rounded-circle" title="{{ app.user.userIdentifier }}" width="{{ image_width(image) }}" height="{{ image_height(image) }}">
            {%- else -%}
                {{ icons.icon('user fa-lg far') }}{{ ' ' ~ app.user.userIdentifier }}
            {%- endif -%}
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
        {{ icons.dropdownItem(path('app_logout'), 'index.logout', 'sign-out-alt') }}
        {{ icons.dropdownItem(path('user_profile_edit'), 'profile.edit.title', 'user-gear') }}
        {{ icons.dropdownItem(path('user_profile_change_password'), 'profile.change_password.title', 'unlock') }}
        {% if is_test -%}
            {{ icons.dropdownItem(path('user_parameters'), 'user.parameters.title', 'user-gear') }}
            {{ icons.dropdownItem(path('user_theme'), 'index.menu_theme', 'file-image far', null, {'%name%': theme_name(app.request)}) }}
        {% endif %}
        {#
        {% if is_admin -%}
            {{ icons.dropdownSeparator }}
            {{ icons.dropdownItem(path('admin_parameters'), 'parameters.title', 'cogs') }}
            {{ icons.dropdownItem(path('log_table'), 'log.title', ICON_LOG) }}
            {{ icons.dropdownItem(path('admin_clear'), 'clear_cache.title', ICON_DELETE) }}
            {{ icons.dropdownSeparator }}
            {{ icons.dropdownItem(path('user_table'), 'user.list.title', ICON_USER) }}
            {{ icons.dropdownItem(path('admin_rights_user'), 'index.menu_rights_user', 'unlock') }}
        {% endif %}
        {% if is_super_admin -%}
            {{ icons.dropdownItem(path('admin_rights_admin'), 'index.menu_rights_admin', 'unlock') }}
        {% endif %}
        #}
        {% if is_previous_admin -%}
            {{ icons.dropdownSeparator }}
            {{ icons.dropdownItem(impersonation_exit_path(path('user_table')), 'user.switch.exit.title', 'user-slash') }}
        {% endif %}

        {# switch environment #}
        {% if is_env_dev -%}
            {{ icons.dropdownSeparator }}
            {{ icons.dropdownItem(link_prod, 'environment.switch', 'location-arrow', null, {'%name%': 'environment.prod'|trans}) }}
        {% elseif is_env_prod or is_env_local -%}
            {{ icons.dropdownSeparator }}
            {{ icons.dropdownItem(link_dev, 'environment.switch', 'location-arrow', null, {'%name%': 'environment.dev'|trans}) }}
        {% endif %}
        {{ icons.dropdownSeparator }}
        {% if is_granted_data %}
            {{ icons.dropdownItem(path('site_map'), 'index.menu_site_map', 'sitemap') }}
        {% endif %}
        {{ icons.dropdownItem(path('user_comment'), 'user.comment.title', 'envelope far') }}
        {{ icons.dropdownItem(path('about'), 'index.menu_info', 'info-circle', null, {'%app_name%': app_name}) }}
        </div>
    </li>
{% else %}
    {{ icons.navItem(path('app_login'), 'index.login', 'sign-in') }}
{% endif -%}
