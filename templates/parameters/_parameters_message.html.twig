{% from 'parameters/_parameters.html.twig' import renderHeader, renderDescription %}
{{ renderHeader('message', 'bell') }}
<div id="message" class="card-body pt-0 collapse" data-bs-parent=".card-parameter">
    {{ renderDescription('message') }}
    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.position) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.timeout) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.progress) }}
        </div>
    </div>
    <div class="d-flex flex-md-row flex-column">
        {{ form_row(form.icon) }}
        {{ form_row(form.title) }}
        {{ form_row(form.subTitle) }}
        {{ form_row(form.close) }}
    </div>
</div>
