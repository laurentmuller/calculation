{% extends 'cards/card_show.html.twig' %}
{% from 'macros/_properties.html.twig' import property, email, externalLink %}
{# parameters #}
{%- set title = 'customer.show.title' -%}
{%- set params = route_params(app.request, item) %}
{# actions #}
{%- set edit_path = is_granted(ATTRIBUTE_EDIT, item) ? path('customer_edit', params) : null -%}
{%- set delete_path = is_granted(ATTRIBUTE_DELETE, item) ? path('customer_delete', params) : null -%}
{%- set cancel_path = cancel_url(app.request, item, 'customer_table') -%}
{# properties #}
{% block property_body %}
{{ property('customer.fields.title', item.title) }}
{{ property('customer.fields.firstName', item.firstName) }}
{{ property('customer.fields.lastName', item.lastName) }}
{{ property('customer.fields.company', item.company) }}
{{ property('customer.fields.address', item.address) }}
{{ property('customer.fields.zipCode', item.zipCode) }}
{{ property('customer.fields.city', item.city) }}
{{ email(item.email, null, 'customer.fields.email') }}
{{ externalLink(item.webSite, null, null, 'customer.fields.webSite') }}
{% endblock %}
