{% extends '@email/default/notification/body.html.twig' %}
{# style #}
{% block style %}
{{ parent() }}
{{ source("@css/email.css") }}
{% endblock %}
{# lead #}
{% block lead %}
<container>
    <row>
        <columns large="1" small="2" valign="middle">
            <img src="{{ email.image('@images/icons/favicon-36x36.png') }}" alt="{{ app_description }}">
        </columns>
        <columns large="11" small="10" valign="middle">
            {% if importance is not null %}<small><strong>{{ ('importance.' ~ importance ~ '_full')|trans }}</strong></small>{% endif %}
            <p class="lead">
                {{- email.subject -}}
            </p>
        </columns>
    </row>
</container>
{% endblock %}
{# exception #}
{% block exception %}
{% if exception %}
    <spacer size="16"></spacer>
    <p><em>{{ 'notification.exception'|trans }}</em></p>
{% endif %}
{% endblock %}
