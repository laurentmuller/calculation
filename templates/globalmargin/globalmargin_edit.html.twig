{% extends 'cards/card_edit.html.twig' %}
{# parameters #}
{%- set title = new ? 'globalmargin.add.title' : 'globalmargin.edit.title' -%}
{%- set title_icon = ICON_GLOBAL_MARGIN -%}
{%- set page_list = 'globalmargin_index' -%}
{# body #}
{% block card_body %}
<div class="row">
    <div class="col-md-4">
        {{ form_row(form.minimum) }}
    </div>
    <div class="col-md-4">
        {{ form_row(form.maximum) }}
    </div>
    <div class="col-md-4">
        {{ form_row(form.margin) }}
    </div>
</div>
{% endblock card_body %}
{# javascripts #}
{% block javascripts %}
{% if is_js_debug %}
    {{ parent() }}
    {{- asset_js('js/plugins/plugin-input-number.js') }}
    {{- asset_js('js/application/margins_edit.js') }}
{% else %}
    {{- asset_js('js/compiled/margins_edit.js') }}
{% endif %}
{% endblock javascripts %}
