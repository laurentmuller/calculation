{% extends 'cards/card_show.html.twig' %}
{% from 'macros/_properties.html.twig' import property %}
{% from 'macros/_timestampable.html.twig' import timestampable_properties as properties %}
{# parameters #}
{%- set title = 'product.show.title' -%}
{%- set id = item.id -%}
{%- set params = route_params(app.request, id) %}
{# actions #}
{%- set edit_path = is_granted(ATTRIBUTE_EDIT, item) ? path('product_edit', params) : null -%}
{%- set delete_path = is_granted(ATTRIBUTE_DELETE, item) ? path('product_delete', params) : null -%}
{%- set cancel_path = cancel_url(app.request, id, 'product_table') -%}
{# properties #}
{% block property_body %}
{{ property('product.fields.description', item.description) }}
{{ property('product.fields.category', item.categoryCode) }}
{{ property('product.fields.group', item.groupCode) }}
{{ property('product.fields.supplier', item.supplier) }}
{{ property('product.fields.price', item.price|amount) }}
{{ property('product.fields.unit', item.unit) }}
{{ properties(item) }}
{% endblock %}
