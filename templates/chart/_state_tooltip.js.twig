/**
 * @typedef Point
 * @type {object}
 * @property {string} id
 * @property {string} name
 * @property {string} count
 * @property {string} calculationsPercent
 * @property {string} items
 * @property {string} marginAmount
 * @property {string} marginPercent
 * @property {string} marginClass
 * @property {string} totalPercent
 * @property {string} totalAmount
 */
function renderTooltip () {
    'use strict';
    /** @type Point point */
    const point = this.point;
    let html = '<table class="m-1">';
    html +=
        '<tr>' +
        '<th>{{ 'calculation.fields.state'|trans }}</th>' +
        '<th class="px-1">:</th>' +
        '<th class="text-calculation">' +
            '<div class="d-flex align-items-center">' +
                '<span class="border chart-item state-background-' + point.id + ' me-1"></span>' +
                '<span>' + point.name + '</span>' +
            '</div>' +
        '</th>' +
        '<th class="text-calculation">&nbsp;</th>' +
        '</tr>';
    html += '<tr><td colspan="4"><hr class="my-1"></td></tr>';
    html +=
        '<tr>' +
        '<td>{{ 'calculation.list.title'|trans }}</td>' +
        '<td class="px-1">:</td>' +
        '<td class="text-calculation">' + point.count + '</td>' +
        '<td class="text-calculation ps-3">' + point.calculationsPercent + '</td>' +
        '</tr>';
    html += '<tr><td colspan="4"><hr class="my-1"></td></tr>';
    html +=
        '<tr>' +
        '<td>{{ 'calculationgroup.fields.amount'|trans }}</td>' +
        '<td class="px-1">:</td>' +
        '<td class="text-calculation">' + point.items + '</td>' +
        '<td class="text-calculation">&nbsp;</td>' +
        '</tr>';
    html +=
        '<tr>' +
        '<td>{{ 'calculation.fields.margin'|trans }}</td>' +
        '<td class="px-1">:</td>' +
        '<td class="text-calculation">' + point.marginAmount + '</td>' +
        '<td class="text-calculation ' + point.marginClass + '">' + point.marginPercent + '</td>' +
        '</tr>';
    html += '<tr><td colspan="4"><hr class="my-1"></td></tr>';
    html +=
        '<tr>' +
        '<th>{{ 'calculation.fields.total'|trans }}</th>' +
        '<th class="px-1">:</th>' +
        '<th class="text-calculation">' + point.totalAmount + '</th>' +
        '<th class="text-calculation ps-3">' + point.totalPercent + '</th>' +
        '</tr>';
    html += '</table>';
    return html;
}
