{% extends 'cards/card_edit.html.twig' %}

{# parameters #}
{%- set title = 'calculation.update.title' -%}
{%- set title_icon = 'calculator' -%}
{%- set title_description = 'calculation.update.description' -%}
{%- set cancel_path = path('homepage') -%}

{% block card_body %}
{{ parent() }}
{% if last_update is defined and last_update %}
    {%- set date = last_update|localedatetime('long', 'short') -%}
    <hr class="my-2">
    <p class="mb-0 text-right text-muted small">{{ 'calculation.update.last_update'|trans({'%date%': date}) }}</p>
{% endif %}
{% endblock %}

{% block required_form %}{% endblock %}

{% block javascripts %}
{% if app.debug %}
{{ parent() }}
{{ asset_js('js/application/calculation_update.js') }}
{% else %}
{{ asset_js('js/calculation_update.js') }}
{% endif %}
{% endblock %}
