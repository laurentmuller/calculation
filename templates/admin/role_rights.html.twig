{% extends 'cards/card_edit.html.twig' %}
{% import 'macros/_rights.html.twig' as rights %}

{# parameters #}
{%- set title       = 'admin.rights.title' -%}
{%- set title_icon  = 'unlock' -%}
{%- set cancel_path = path('homepage') -%}

{% block card_container_class '' %}

{% block card_header %}
<div class="row">
    <div class="col-lg-5 mt-1">
        {{ parent() }}
    </div>
    <div class="col-lg-7 text-lg-right d-print-none">
        <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
            {{ rights.actions() }}
        </div>
    </div>
</div>
{%- endblock %}

{% block card_body %}
{{ form_row(form.name) }}
{{ rights.table(form, default) }}
{% endblock %}

{% block javascripts -%}
{% if app.debug %}
{{ parent() }}
{{ asset_js('js/application/user_rights.js') }}
{% else %}
{{ asset_js('js/user_rights.js') }}
{% endif %}
{%- endblock %}
