{# Macro for a calculation categories #}
{% macro printCategoryRow(category, editable) -%}
{# import #}
{% import 'macros/_icons.html.twig' as icons %}
{% import 'calculation/_macro_items.html.twig' as macroItems %}

<tbody{% if editable %} data-link="row" class="rowlink" data-prototype="{{ macroItems.printItemRow(category.items.vars.prototype, editable, false, false)|e('html_attr') }}"{% endif -%}>
    <tr class="drag-skip category">
        {{ form_widget(category.category) }}
        {{ form_widget(category.code) }}
        {{ form_widget(category.position) }}
        <th class="rowlink-skip" colspan="5">{{ category.code.vars.value }}</th>
        {% if editable -%}
        <th class="rowlink-skip actions d-print-none">
            {# menu #}
            <div class="dropdown">
                {%- set menu_id = 'dropdownMenuCategory_' ~ category.vars.id -%}
                {{ icons.dropdownEllipsis(menu_id) }}
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="{{ menu_id }}">
                    {{ icons.dropdownItemWithClass('#', 'calculation.edit.delete_category', 'times', 'btn-delete-category') }}
                    {{ icons.dropdownSeparator() }}
                    {{ icons.dropdownItemWithClass('#', 'calculation.edit.add_item', 'file far', 'btn-add-item') }}
                    {{ icons.dropdownItemWithClass('#', 'calculation.edit.add_task', 'tasks', 'btn-add-task') }}
                </div>
            </div>
        </th>
        {%- endif %}
    </tr>
    {% for item in category.items %}
        {{ macroItems.printItemRow(item, editable, loop.first, loop.last) }}
    {% endfor %}
</tbody>
{%- endmacro %}
