{% from 'macros/_icons.html.twig' import copyright_link %}
{%- set is_dark_navigation = app.user and user_parameters.homePage.darkNavigation -%}
<footer class="navbar navbar-footer bg-body-tertiary border-top py-1 justify-content-md-end fixed-bottom small d-print-none"{% if is_dark_navigation %} data-bs-theme="dark"{% endif %}>
    <div class="navbar-nav flex-row">
        <span class="navbar-text text-truncate text-danger border-end border-secondary d-none" id="footer-message">
            {{- 'common.data_changed'|trans -}}
        </span>
        <a class="nav-link text-truncate border-end border-secondary{% if app.current_route == 'about' %} active{% endif %}" href="{{ path('about_index') }}" title="{{ 'footer.about_title'|trans }}">
            {{- application_service.fullName -}}
        </a>
        <span class="navbar-text text-truncate border-end border-secondary" title="{{ 'footer.environment_title'|trans }}">
            {{- ('environment.' ~ app_mode)|trans -}}
        </span>
        {{- copyright_link('nav-link text-truncate') -}}
    </div>
</footer>
