{% extends 'cards/card_flex.html.twig' %}

{# imports #}
{% import 'macros/_properties.html.twig' as properties %}
{% import 'macros/_icons.html.twig' as icons %}

{# parameters #}
{%- set title        = 'customer.list.title' -%}
{%- set title_icon   = 'address-card far' -%}
{%- set add_title    = 'customer.list.add_title' -%}
{%- set pdf_title    = 'customer.list.pdf_title' -%}
{%- set empty_list   = 'customer.list.empty' -%}

{# actions #}
{%- set object_type  = EntityVoterInterface.ENTITY_CUSTOMER -%}
{%- set add_page     = is_granted(EntityVoterInterface.ATTRIBUTE_ADD, object_type) ? 'customer_add' : null -%}
{%- set edit_page    = is_granted(EntityVoterInterface.ATTRIBUTE_EDIT, object_type) ? 'customer_edit' : null -%}
{%- set delete_page  = is_granted(EntityVoterInterface.ATTRIBUTE_DELETE, object_type) ? 'customer_delete' : null -%}
{%- set show_page    = is_granted(EntityVoterInterface.ATTRIBUTE_SHOW, object_type) ? 'customer_show' : null -%}
{%- set pdf_page     = is_granted(EntityVoterInterface.ATTRIBUTE_PDF, object_type) ? 'customer_pdf' : null -%}
{%- set default_page = edit ? edit_page|default(show_page) : show_page|default(edit_page) -%}

{% block item_title %}
{%- set item_title = item.fullName ? item.fullName : item.company -%}
{%- if default_page -%}
    {%- set default_path = path(default_page, params) -%}
    <a href="{{ default_path }}" class="text-body rowlink-skip">{{ item_title }}</a>
{%- else -%} 
    {{ item_title }}
{%- endif -%}
{% endblock %}

{# properties #}
{% block item_property %}
{{ properties.line((item.fullName) ? item.company : '') }}
{{ properties.line(item.address) }}
{{ properties.line(item.zipCity) }}
{{ properties.email(item.email) }}
{% endblock %}

{%- block sort_actions -%}
{{ parent() }}
{{ icons.dropdownSeparator() }}
{{ icons.dropdownItemTable('customer_table') }}
{%- endblock -%}
