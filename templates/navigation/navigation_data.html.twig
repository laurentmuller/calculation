{# data menu #}
{% import 'macros/_icons.html.twig' as icons %}
{%- set is_granted_data = is_granted_product or is_granted_category or is_granted_group or is_granted_calculation_state or is_granted_global_margin or is_granted_task or is_granted_customer -%}
{%- if is_granted_data -%}
<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" id="dataDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        {{- icons.icon('database', 'index.menu_data') -}}
    </a>
    <div class="dropdown-menu" aria-labelledby="dataDropdown">
    {%- if is_granted_product -%}
        {{- icons.dropdownItem(path('product_table'), 'product.list.title', 'file-alt far') -}}
    {%- endif -%}
    {%- if is_granted_task -%}
        {{- icons.dropdownItem(path('task_table'), 'task.list.title', 'tasks') -}}
    {%- endif -%}
    {%- if is_granted_category -%}
        {{- icons.dropdownItem(path('category_table'), 'category.list.title', 'folder far') -}}
    {%- endif -%}
    {%- if is_granted_group -%}
        {{- icons.dropdownItem(path('group_table'), 'group.list.title', 'code-branch') -}}
    {%- endif -%}
    {%- if is_granted_calculation_state -%}
        {{- icons.dropdownItem(path('calculationstate_table'), 'calculationstate.list.title', 'flag far') -}}
    {%- endif -%}
    {%- if is_granted_global_margin -%}
        {{- icons.dropdownItem(path('globalmargin_table'), 'globalmargin.list.title', 'percent') -}}
    {%- endif -%}
    {%- if is_granted_customer %}
        {%- if is_granted_data -%}{{- icons.dropdownSeparator -}}{% endif %}
        {{- icons.dropdownItem(path('customer_table'), 'customer.list.title', 'address-card far') -}}
    {%- endif -%}
    </div>
</li>
{% endif %}
