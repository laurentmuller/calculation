{% extends 'cards/card_edit.html.twig' %}

{# parameters #}
{%- set title      = new ? 'globalmargin.add.title' : 'globalmargin.edit.title' -%}
{%- set title_icon = 'percent' -%}
{%- set page_list  = 'globalmargin_list' -%}

{% block card_body %}
<div class="form-row">
    <div class="col-md-4">
	    {{ form_row(form.minimum) }}
    </div>
    <div class="col-md-4">
	    {{ form_row(form.maximum) }}
    </div>
    <div class="col-md-4">
	    {{ form_row(form.margin) }}
    </div>
</div>
{% endblock %}

{% block javascripts %}
{% if app.debug %}
{{ parent() }}
{{ asset_js('js/application/validation_edit.js') }}
{% else %}
{{ asset_js('js/validation_edit.js') }}
{% endif %}
{% endblock %}
