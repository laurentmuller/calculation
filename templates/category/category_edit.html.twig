{% extends 'cards/card_edit.html.twig' %}
{% from 'macros/_timestampable.html.twig' import timestampable_footer %}
{# parameters #}
{%- set title = title|default(new ? 'category.add.title' : 'category.edit.title') -%}
{%- set title_icon = ICON_CATEGORY -%}
{%- set page_list = 'category_index' -%}

{% block card_body %}
<div class="row">
    <div class="col-md-6">
        {{ form_row(form.code) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.group) }}
    </div>
</div>
{{ form_row(form.description) }}
{% endblock %}
{# footer #}
{% block card_footer -%}
{{ parent() }}
{{ timestampable_footer(item) }}
{% endblock %}
{# javascripts #}
{% block javascripts %}
{% if app.debug %}
    {{ parent() }}
    {{ asset_js('js/application/validation_edit.js') }}
{% else %}
    {{ asset_js('js/compiled/validation_edit.js') }}
{% endif %}
{% endblock %}
