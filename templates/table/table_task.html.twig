{% extends 'table/table_base.html.twig' %}

{# parameters #}
{%- set title        = 'task.list.title' -%}
{%- set title_icon   = 'tasks' -%}
{%- set defer_url    = url('table_task') -%}
{%- set save_url     = url('table_task_save') -%}
{%- set categoryId   = category.id|default(0) -%}
{%- set params       = {'categoryId': categoryId} -%}
{%- set object_type  = EntityVoterInterface.ENTITY_TASK -%}
    
{% block toolbar_actions -%}
<div class="input-group-append btn-dropdown">
    <button id="categoryId" data-value="{{ categoryId }}" class="btn btn-sm btn-outline-secondary dropdown-input dropdown-toggle" type="button" data-toggle="dropdown" data-default="{{ 'task.fields.category'|trans }}" title="{{ 'task.list.category_help'|trans }}">
        {{- category ? category.code : 'task.fields.category'|trans -}}
    </button>
    <div class="dropdown-menu" aria-labelledby="categoryId">
        {{ _self.output_dropdown('category', 0, categoryId, 'task.list.category_all_text'|trans) }}
        {% for category in categories %}
        {{ _self.output_dropdown('category', category.id, categoryId, category.code) }}
        {% endfor %}
    </div>
</div>
{%- endblock %}

{% block global_actions -%}
{{ _self.item_external(path('task_pdf'), 'task.list.pdf_title', 'file-pdf far') }}
{{ _self.item_external(path('task_excel'), 'task.list.excel_title', 'file-excel far') }}
{%- endblock %}

{% block edit_actions -%}
{{ _self.item_path(path('task_show', params), 'task.show.title', 'tv', show_class) }}
{{ _self.item_path(path('task_edit', params), 'task.edit.title', 'pencil-alt', edit_class) }}
{{ _self.item_path(path('task_delete', params), 'task.delete.title', 'times', 'btn-delete') }}
{{ _self.item_separator() }}
{{ _self.item_path(path('task_add', params), 'task.add.title', 'file far', 'btn-add') }}
{{ _self.item_path(path('task_clone', params), 'common.button_clone', 'copy far', 'btn-task-clone') }}
{{ _self.item_separator() }}
{{ _self.item_path(path('task_compute', params), 'taskcompute.title', 'keyboard', 'btn-task-compute') }}
{%- endblock %}
