{% from 'macros/_themes_list.html.twig' import entries %}
{% set current = theme(app.request) %}
<li class="nav-item dropdown my-1">
    <button class="nav-link dropdown-toggle theme-switcher" role="button" title="{{ 'theme.help'|trans }}" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="theme-icon {{ current.icon }}"></i>
        <span class="theme-text d-lg-none">{{ current|trans }}</span>
    </button>
    {{ entries('left') }}
</li>
