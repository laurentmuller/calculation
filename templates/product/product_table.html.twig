{% extends 'cards/card_table.html.twig' %}
{% import 'macros/_icons.html.twig' as icons %}
{# parameters #}
{%- set title = 'product.list.title' -%}
{%- set title_icon = ICON_PRODUCT -%}
{%- set categoryid = customData.category.id|default(0) -%}
{%- set object_type = ENTITY_PRODUCT -%}

{% block header_actions -%}
{% if allow_add %}<a class="add-link p-0" href="{{ path('product_add', params) }}">{{ 'product.add.title'|trans }}</a>{% endif %}
{%- endblock %}

{% block toolbar_actions -%}
{% if customData.categories|length > 1 %}
{% set group = '' %}
<div class="input-group-append">
    <button id="categoryid" data-value="{{ categoryid }}" class="btn btn-sm btn-outline-secondary dropdown-input dropdown-toggle" type="button" data-toggle="dropdown" data-default="{{ 'product.fields.category'|trans }}" title="{{ 'product.list.category_help'|trans }}">
        {{ icons.icon(ICON_CATEGORY) }}&nbsp;{{- customData.category ? customData.category.code : 'product.fields.category'|trans -}}
    </button>
    <div class="dropdown-menu" aria-labelledby="categoryid">
        {{ _self.output_dropdown('category', 0, categoryid, 'product.list.category_all_text'|trans) }}
        {% for category in customData.categories %}
            {% if group != category.group %}
                {% set group = category.group %}
                {{ _self.output_dropdown_header(group) }}
            {% endif %}
            {{ _self.output_dropdown('category', category.id, categoryid, category.code) }}
        {% endfor %}
    </div>
</div>
{% endif %}
{%- endblock %}

{% block global_actions -%}
{{- _self.item_external(path('product_pdf'), 'product.list.pdf_title', ICON_PDF) }}
{{- _self.item_external(path('product_excel'), 'product.list.excel_title', ICON_EXCEL) }}
{% if is_granted('ROLE_ADMIN') -%}
    {{- _self.item_separator() }}
    {{- _self.item_path(path('admin_product'), 'product.update.title', ICON_EDIT) }}
{%- endif %}
{%- endblock %}

{% block edit_actions -%}
{{- _self.item_path(path('product_edit', params), 'product.edit.title', ICON_EDIT, edit_class) }}
{%- endblock %}

{% block delete_actions -%}
{{- _self.item_path(path('product_delete', params), 'product.delete.title', ICON_DELETE, 'btn-delete') }}
{%- endblock %}

{% block add_actions -%}
{{- _self.item_path(path('product_add', params), 'product.add.title', ICON_ADD, 'btn-add') }}
{{- _self.item_path(path('product_clone', params), 'common.button_clone', ICON_COPY, 'btn-clone') }}
{%- endblock %}

{% block show_actions -%}
{{- _self.item_path(path('product_show', params), 'product.show.title', ICON_SHOW, show_class) }}
{%- endblock %}

{% block custom_view_header -%}
{%- if row_edit -%}
    <a href="{{ path('product_edit', params) }}" class="item-link stretched-link text-body" title="{{ 'product.edit.title'|trans }}">%description%</a>
{%- elseif row_show -%}
    <a href="{{ path('product_show', params) }}" class="item-link stretched-link text-body" title="{{ 'product.show.title'|trans }}">%description%</a>
{%- else -%}
    <span>%description%</span>
{%- endif -%}
{%- endblock %}

{% block custom_view_body -%}
{{ _self.property_value('%group.code% / %category.code%') }}
{{ _self.property_value('%supplier%') }}
{{ _self.property_line() }}
{{ _self.property_row('product.fields.price', '<span class="JavaScript:formatProductClass">%price%</span>JavaScript:formatProductUnit', 'text-right') }}
{%- endblock %}
