{# vendor/symfony/twig-bridge/Resources/views/Email/zurb_2/notification/body.html.twig #}
{% extends '@email/default/notification/body.html.twig' %}
{% set footer_text = 'notification.footer'|trans({'%app_name%': app_full_name}) %}
{# style #}
{% block style %}
    {{ parent() }}
    {{ source('@css/email.css') }}
{% endblock style %}
{# lead #}
{% block lead %}
    <container>
        <row>
            <columns large="1" small="2" valign="middle">
                <img src="{{ email.image('@images/icons/favicon-36x36.png') }}" alt="{{ app_description }}">
            </columns>
            <columns large="11" small="10" valign="middle">
                {% if importance_text is defined and importance_text %}
                    <small><strong>{{ importance_text }}</strong></small>
                {% endif %}
                <p class="lead">
                    {{- email.subject -}}
                </p>
            </columns>
        </row>
    </container>
{% endblock lead %}
{# action #}
{% block action %}
    <spacer size="8"></spacer>
    Cordialement,<br>
    L'Ã©quipe de {{ app_name }}
    {{ parent() }}
{% endblock action %}
{# exception #}
{% block exception %}
    {% if exception %}
        <spacer size="16"></spacer>
        <p><em>{{ 'notification.exception'|trans }}</em></p>
    {% endif %}
{% endblock exception %}
