{% extends 'cards/card_show.html.twig' %}
{% from 'macros/_properties.html.twig' import property %}
{% from 'macros/_timestampable.html.twig' import timestampable_properties %}
{# parameters #}
{%- set title = 'category.show.title' -%}
{%- set params = route_params(app.request, item) %}
{# actions #}
{%- set edit_path = is_granted(PERMISSION_EDIT, item) ? path('category_edit', params) : null -%}
{%- set delete_path = is_granted(PERMISSION_DELETE, item) ? path('category_delete', params) : null -%}
{%- set cancel_path = cancel_url(app.request, item, 'category_index') -%}
{# properties #}
{% block property_body %}
{{ property('category.fields.code', item.code) }}
{{ property('category.fields.description', item.description) }}
{{ property('category.fields.products', 'counters.products'|trans({count: item.countProducts})) }}
{{ property('category.fields.tasks', 'counters.tasks'|trans({count: item.countTasks})) }}
{{ timestampable_properties(item) }}
{% endblock property_body %}
