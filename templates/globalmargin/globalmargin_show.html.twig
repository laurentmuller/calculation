{% extends 'cards/card_show.html.twig' %}
{% from 'macros/_properties.html.twig' import property %}
{% from 'macros/_timestampable.html.twig' import timestampable_properties %}
{# parameters #}
{%- set title = 'globalmargin.show.title' -%}
{%- set params = route_params(app.request, item) %}
{%- set cancel_path = cancel_url(app.request, item, 'globalmargin_index') -%}
{# properties #}
{% block property_body %}
{{ property('globalmargin.fields.minimum', item.minimum|amount) }}
{{ property('globalmargin.fields.maximum', item.maximum|amount) }}
{{ property('globalmargin.fields.delta', item.delta|amount) }}
{{ property('globalmargin.fields.margin', item.margin|percent) }}
{{ timestampable_properties(item) }}
{% endblock %}
{% block actions_form %}
{% if is_granted(PERMISSION_EDIT, ENTITY_GLOBAL_MARGIN) %}
    {% set edit_path = path('globalmargin_edit', {id: item.id}) %}
{% endif %}
{{ parent() }}
{% endblock %}
