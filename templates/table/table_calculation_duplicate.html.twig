{% extends 'table/table_base.html.twig' %}

{# parameters #}
{%- set title        = 'duplicate.title' -%}
{%- set title_icon   = 'copy far' -%}
{%- set defer_url    = url('table_duplicate') -%}
{%- set save_url     = url('table_duplicate_save') -%}
{%- set object_type  = EntityVoterInterface.ENTITY_CALCULATION -%}

{% block card_header -%}
{{ parent() }}        
{% if customData.itemsCount and rows|length -%}<small>{{ 'duplicate.count'|trans({'%calculations%': rows|length, '%items%': customData.itemsCount}) }}</small>{%- endif %}
{%- endblock %}

{% block header_actions -%}
<small>{{ 'duplicate.description'|trans }}</small>
{%- endblock %}

{% block global_actions -%}
{{- _self.item_external(path('duplicate_pdf'), 'calculation.list.pdf_title', 'file-pdf far') }}
{{- _self.item_external(path('duplicate_excel'), 'calculation.list.excel_title', 'file-excel far') }}
{%- endblock %}

{% block show_actions -%}
{{- _self.item_path(path('calculation_show', params), 'calculation.show.title', 'tv', show_class) }}
{%- endblock %}

{% block edit_actions -%}
{{- _self.item_path(path('calculation_edit', params), 'calculation.edit.title_short', 'pencil-alt', edit_class) }}
{%- endblock %}

{% block delete_actions -%}
{{- _self.item_path(path('calculation_delete', params), 'calculation.delete.title', 'times', 'btn-delete') }}
{%- endblock %}

{% block other_actions -%}
{% if allow_export %}
{{- _self.item_separator() }}
{{- _self.item_path_external(path('calculation_pdf_id', params), 'calculation.list.pdf_single_title', 'file-pdf far', 'btn-calculation-pdf') }}
{% endif %}
{%- endblock %}
