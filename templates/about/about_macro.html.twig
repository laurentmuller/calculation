{# macros #}
{% macro headerInfo(name) -%}
<tr class="h"><th colspan="2">{{ name }}</th></tr>
{%- endmacro %}

{% macro headerLinkInfo(name, target, count, colspan) -%}
{%- set colspan = colspan|default(2) -%}
<tbody>
    <th class="h font-weight-normal" colspan="{{ colspan }}">
        <a data-toggle="collapse" href="#{{ target }}" class="card-link" aria-expanded="false" aria-controls="{{ target }}">{{ name }}</a>
        <span>({{ count|integer }})</span>
    </th>
</tbody>
{%- endmacro %}

{% macro rowInfo(name, value, nameClass = '', valueClass = '') -%}
{%- set nameClass = ('e ' ~ nameClass|default(''))|trim -%}
{%- set valueClass = ('v ' ~ valueClass|default(''))|trim -%}
<tr>
    <td class="{{ nameClass }}">{{ name }}</td>
    <td class="{{ valueClass }}">{{ value }}</td>
</tr>
{%- endmacro %}

{% macro rowInfoLink(name, value, href) -%}
<tr>
    <td class="e">{{ name }}</td>    
    <td class="v">
        <a href="{{ href }}" class="card-link" target="_blank" rel="noopener noreferrer">{{ value }}</a>
    </td>
</tr>
{%- endmacro %}

{% macro rowPackage(package) -%}
{% import 'macros/_icons.html.twig' as icons %}
<tr{% if package.dev %} class="font-italic font-weight-light"{% endif -%}>
    <td class="e pl-3">
        {{ package.name }}{%- if package.homepage %}&nbsp;{{- icons.linkExternal(package.homepage, '', '', 'share', 'about.extern_link') -}}{% endif -%}
    </td>
    <td class="f">{{ package.version }}</td>
    <td class="text">{{ package.description }}{%- if package.dev %} (Development mode only){%  endif -%}</td>
</tr>
{%- endmacro %}

{% macro aboutCard(id) -%}
{%- set route = path('ajax_' ~ id) -%}
{%- set title = ('about.' ~ id)|trans -%}
<div class="card">
    <div class="card-header" id="{{ id }}-header">
        <a data-toggle="collapse" role="button" href="#{{ id }}" class="card-link" aria-expanded="false" aria-controls="{{ id }}">{{ title }}</a>
    </div>
    <div id="{{ id }}" class="card-body collapse" aria-labelledby="{{ id }}-header" aria-expanded="false" data-parent="#accordionAbout" data-url="{{ route }}">
        <div class="alert mb-0">
            <span class="spinner-border spinner-border-sm text-secondary" role="status" aria-hidden="true"></span>
            <span>{{ 'about.loading'|trans }}</span>
        </div>
    </div>
</div>
{%- endmacro %}
