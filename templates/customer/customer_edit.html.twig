{% extends 'cards/card_edit.html.twig' %}

{# parameters #}
{%- set title      = new ? 'customer.add.title' : 'customer.edit.title' -%}
{%- set title_icon = 'address-card far' -%}
{%- set page_list  = 'customer_list' -%}
{%- set form_attr  = form_attr|default({})|merge({
                     'data-title'  : title|trans,
                     'data-search' : url('ajax_search_address'),
                     'data-error'  : 'customer.edit.error_search'|trans }) -%}
{% block card_body %}
<div class="form-row">
    <div class="col-md-6">
        <div class="form-group">
            {{ form_row(form.title) }}
        </div>
    </div>
</div>
<div class="form-row">
    <div class="col-md-6">
	    {{ form_row(form.lastName) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.firstName) }}
    </div>
</div>
{{ form_row(form.company) }}
{{ form_row(form.address) }}
<div class="form-row">
    <div class="col-md-3">
        {{ form_row(form.zipCode, {attr: {'data-msg-zipcode': 'customer.zip_code'|trans([], 'validators')}}) }}
    </div>
    <div class="col-md-9">
        {{ form_row(form.city) }}
    </div>
</div>
{{ form_row(form.email) }}
{{ form_row(form.webSite) }}
{% endblock %}

{% block javascripts %}
{% if app.debug %}
{{ parent() }}
{{ asset_js('js/plugins/plugin-typeahead.js') }}
{{ asset_js('js/application/customer_edit.js') }}
{% else %}
{{ asset_js('js/customer_edit.js') }}
{% endif %}
{% endblock %}
