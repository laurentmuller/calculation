{% extends 'parameters/_parameters.html.twig' %}
{# parameters #}
{% set title = 'user.parameters.title' %}
{% set title_icon = 'user-gear' %}
{% set title_description = 'user.parameters.description' %}
{# body #}
{% block card_body -%}
    <div class="card card-parameter card-collapse border-0">
        {{ include('parameters/_parameters_display.html.twig', {form: form.display, expanded: true}) }}
        {{ include('parameters/_parameters_message.html.twig', {form: form.message}) }}
        {{ include('parameters/_parameters_home_page.html.twig', {form: form.homePage}) }}
        {{ include('parameters/_parameters_options.html.twig', {form: form.options}) }}
    </div>
    {{ parent() }}
{% endblock card_body %}
