{# test menu #}
{% import 'macros/_icons.html.twig' as icons %}

{% if is_test -%}
<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" id="testDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        {{- icons.icon('bug', 'index.menu_test') -}}
    </a>
    <div class="dropdown-menu" aria-labelledby="testDropdown">
        {{- icons.dropdownItem(path('test_notifications'), 'test.notification', 'bell far') -}}
        {{- icons.dropdownItem(path('test_editor'), 'test.editor', 'edit') -}}
        {{- icons.dropdownItem(path('calendar_year'), 'calendar.year_title', 'calendar-alt far', null, {'%year%': 'now'|date('Y')}) -}}
        {{- icons.dropdownItem(path('test_timeline'), 'timeline.title', 'stream') -}}
        {{- icons.dropdownItem(path('test_recaptcha'), 'test.recaptcha', 'google fab') -}}
        {{- icons.dropdownSeparator -}}
        {{- icons.dropdownItem(path('exchange_display'), 'exchangerate.title', 'comments-dollar') -}}
        {{- icons.dropdownItem(path('openweather_weather'), 'openweather.current.title', 'cloud-sun') -}}
        {{- icons.dropdownItem(path('test_translate'), 'translator.title', 'globe') -}}
        {{- icons.dropdownSeparator -}}
        {{- icons.dropdownItemExternal(path('test_html'), 'test.html', 'code') -}}
        {{- icons.dropdownItem(path('test_password'), 'password.title', 'lock') -}}
        {{- icons.dropdownSeparator -}}
        {{- icons.dropdownItem(path('admin_import'), 'swisspost.title', 'download') -}}
        {{- icons.dropdownSeparator -}}
        {{- icons.dropdownItem(path('generate'), 'generate.title', 'random') -}}
        {{- icons.dropdownItem(path('update'), 'update.title', 'edit') -}}
        {{- icons.dropdownItem(path('schema'), 'schema.index.title', 'table') -}}
        {{- icons.dropdownSeparator -}}
        {{- icons.dropdownItem(path('help'), 'help.title', 'question-circle') -}}
    </div>
</li>
{% endif -%}
