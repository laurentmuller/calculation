{% extends 'cards/card_table.html.twig' %}
{# imports #}
{% import 'macros/_icons.html.twig' as icons %}

{# macros #}
{% macro add_states(states) %}
{%- set total = states|reduce((carry, state) => carry + state.count, 0) -%}
<option value="">{{ 'datatable.all'|trans }} ({{ total|integer }})</option>
{% for state in states %}
    <option value="{{ state.id }}">{{ state.code }} ({{ state.count|integer }})</option>
{% endfor %}
{% endmacro %}

{# parameters #}
{%- set title       = 'calculation.list.title' -%}
{%- set title_icon  = 'calculator' -%}
{%- set pdf_title   = 'calculation.list.pdf_title' -%}
{%- set excel_title = 'calculation.list.excel_title' -%}
{%- set object_type = EntityVoterInterface.ENTITY_CALCULATION -%}

{# actions #}
{%- set params      = {'id': 0} -%}
{%- set add_path    = path('calculation_add') -%}
{%- set show_path   = path('calculation_show', params) -%}
{%- set edit_path   = path('calculation_edit', params) -%}
{%- set delete_path = path('calculation_delete', params) -%}
{%- set pdf_path    = path('calculation_pdf') -%}
{%- set excel_path  = path('calculation_excel') -%}
{%- set clone_path  = path('calculation_clone', params) -%}
{%- set state_path  = path('calculation_state', params) -%}
{%- set single_path = path('calculation_pdf_id', params) -%}

{# titles #}
{%- set add_title    = 'calculation.add.title' %}
{%- set show_title   = 'calculation.show.title' %}
{%- set edit_title   = 'calculation.edit.title_short' %}
{%- set delete_title = 'calculation.delete.title' %}

{# highlight search #}
{%- set attributes = attributes|default({})|merge({'data-search-highlight': true}) -%}

{% block row_input -%}
{% if states is defined %}
<div class="col-auto pr-0">
    <div class="form-inline">
        <label class="mr-2" for="state">{{ 'calculation.fields.state'|trans }}</label>
        <select id="state" name="state" class="form-control form-control-sm custom-select custom-select-sm">
        {{ _self.add_states(states) -}}
        </select>
    </div>
</div>
{% endif %}
{%- endblock %}

{# other actions #}
{% block table_actions %}
{{ _self.item_data(clone_path, 'common.button_clone', 'copy far') }}
{{ _self.item_data(state_path, 'calculation.list.state_title', 'edit') }}
{{ _self.item_data_external(single_path, 'common.button_pdf', 'file-pdf far') }}
{{ icons.dropdownSeparator() }}
{{ parent() }}
{{ icons.dropdownSeparator() }}
{{ icons.dropdownItemCard('calculation_list') }}
{% endblock %}

{% block javascripts -%}
{{- parent() }}
{% if states is defined %}{{- asset_js('js/application/calculation_table.js') }}{% endif %}
{% endblock %}
