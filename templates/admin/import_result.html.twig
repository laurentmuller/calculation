{% extends 'cards/card_base.html.twig' %}
{% from 'macros/_icons.html.twig' import link, homepage %}
{# parameters #}
{%- set title = 'swisspost.title' -%}
{%- set title_icon = 'download' -%}
{%- set title_description = 'swisspost.result.description' -%}
{# class #}
{% block card_class -%}
{% if result.valid %}{{ parent() }}{% else %} border-danger{% endif %}
{%- endblock %}
{% block card_header_class -%}
{% if result.valid %}{{ parent() }}{% else %} text-bg-danger{% endif %}
{%- endblock %}
{# body #}
{% block card_body %}
{%- if result.valid %}
<p>{{ 'swisspost.result.success'|trans({'%date%': result.validity|locale_date('long')}) }}</p>
<table class="table table-bordered table-sm mb-0">
    <thead>
        <tr>
            <th>{{ 'swisspost.fields.objects'|trans }}</th>
            <th class="text-currency">{{ 'swisspost.fields.errors'|trans }}</th>
            <th class="text-currency">{{ 'swisspost.fields.valids'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ 'swisspost.fields.states'|trans }}</td>
            <td class="text-currency">{{ result.errors.state|integer }}</td>
            <td class="text-currency">{{ result.valids.state|integer }}</td>
        </tr>
        <tr>
            <td>{{ 'swisspost.fields.cities'|trans }}</td>
            <td class="text-currency">{{ result.errors.city|integer }}</td>
            <td class="text-currency">{{ result.valids.city|integer }}</td>
        </tr>
        <tr>
            <td>{{ 'swisspost.fields.streets'|trans }}</td>
            <td class="text-currency">{{ result.errors.street|integer }}</td>
            <td class="text-currency">{{ result.valids.street|integer }}</td>
        </tr>
        <tr>
            <th>{{ 'swisspost.fields.total'|trans }}</th>
            <th class="text-currency">{{ (result.errorCount)|integer }}</th>
            <th class="text-currency">{{ (result.validCount)|integer }}</th>
        </tr>
    </tbody>
</table>
{%- else -%}
<p>{{ 'swisspost.result.failure'|trans }}</p>
{% if result.error -%}<p class="mb-0">{{ result.error }}</p>{%- endif %}
{%- endif %}
{% endblock %}
{# footer #}
{% block card_footer %}
{{- homepage() -}}
{% if not result.valid %}
    {{ link(path('admin_import'), 'swisspost.result.new_import', 'btn btn-outline-secondary', null) -}}
{%- endif %}
{% endblock %}
