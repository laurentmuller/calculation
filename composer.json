{
    "name": "bibi/calculation",
    "type": "project",
    "description": "Computational program based on the Symfony 7.x development environment.",
    "keywords": [
        "symfony",
        "calculation"
    ],
    "homepage": "https://github.com/laurentmuller/calculation",
    "license": "proprietary",
    "authors": [
        {
            "name": "Laurent Muller",
            "email": "bibi@bibi.nu",
            "homepage": "https://www.bibi.nu",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "calculation@bibi.nu",
        "issues": "https://github.com/laurentmuller/calculation/issues",
        "source": "https://github.com/laurentmuller/calculation"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.2",
        "ext-ctype": "*",
        "ext-dom": "*",
        "ext-fileinfo": "*",
        "ext-gd": "*",
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-sqlite3": "*",
        "ext-zip": "*",
        "ext-zlib": "*",
        "beberlei/doctrineextensions": "^v1.0",
        "createnl/zxcvbn-bundle": "^3.0",
        "doctrine/doctrine-bundle": "^2.0",
        "doctrine/orm": "^3.0",
        "elao/enum": "^2.0",
        "endroid/qr-code": "^5.0",
        "erusev/parsedown": "^1.0",
        "fakerphp/faker": "^1.0",
        "google/recaptcha": "^1.0",
        "imagine/imagine": "^1.0",
        "laurentmuller/fpdf2": "^2.0",
        "laurentmuller/highcharts-bundle": "^2.0",
        "phpoffice/phpspreadsheet": "^2.0",
        "phpoffice/phpword": "^1.0",
        "robquistnl/simplehtmltotext": "^1.0",
        "symfony/asset": "7.1.*",
        "symfony/console": "7.1.*",
        "symfony/dotenv": "7.1.*",
        "symfony/expression-language": "7.1.*",
        "symfony/flex": "^2.0",
        "symfony/form": "7.1.*",
        "symfony/framework-bundle": "7.1.*",
        "symfony/http-client": "7.1.*",
        "symfony/intl": "7.1.*",
        "symfony/mailer": "7.1.*",
        "symfony/mime": "7.1.*",
        "symfony/monolog-bundle": "^3.0",
        "symfony/notifier": "7.1.*",
        "symfony/property-access": "7.1.*",
        "symfony/property-info": "7.1.*",
        "symfony/rate-limiter": "7.1.*",
        "symfony/runtime": "7.1.*",
        "symfony/security-bundle": "7.1.*",
        "symfony/serializer": "7.1.*",
        "symfony/string": "7.1.*",
        "symfony/translation": "7.1.*",
        "symfony/twig-bundle": "7.1.*",
        "symfony/validator": "7.1.*",
        "symfony/web-link": "7.1.*",
        "symfonycasts/reset-password-bundle": "^1.0",
        "symfonycasts/verify-email-bundle": "^1.0",
        "twig/cssinliner-extra": "^3.0",
        "twig/extra-bundle": "^3.0",
        "twig/inky-extra": "^3.0",
        "twig/markdown-extra": "^3.0",
        "twig/string-extra": "^3.0",
        "twig/twig": "^3.0",
        "vich/uploader-bundle": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-doctrine": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.0",
        "phpstan/phpstan-symfony": "^1.0",
        "phpunit/phpunit": "^10.0",
        "psalm/plugin-phpunit": "^0.19",
        "psalm/plugin-symfony": "^5.0",
        "rector/rector": "^1.0",
        "symfony/browser-kit": "7.1.*",
        "symfony/css-selector": "7.1.*",
        "symfony/debug-bundle": "7.1.*",
        "symfony/maker-bundle": "^1.0",
        "symfony/phpunit-bridge": "7.1.*",
        "symfony/stopwatch": "7.1.*",
        "symfony/var-dumper": "7.1.*",
        "symfony/web-profiler-bundle": "7.1.*",
        "vimeo/psalm": "^5.0",
        "vincentlanglet/twig-cs-fixer": "^3.0",
        "weirdan/doctrine-psalm-plugin": "^2.0"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php70" : "*",
        "symfony/polyfill-php71" : "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*",
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-intl-idn": "*",
        "symfony/polyfill-intl-icu": "*",
        "symfony/polyfill-intl-grapheme": "*",
        "symfony/polyfill-intl-normalizer": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "config": {
        "platform": {
            "php": "8.2.19"
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "platform-check": true,
        "discard-changes": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/runtime": true,
            "symfony/flex": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "7.1.*",
            "docker": false
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "app-lint": [
            "@php bin/console lint:yaml translations",
            "@php bin/console lint:twig templates",
            "@php bin/console lint:container",
            "@php bin/console doctrine:schema:validate --skip-sync",
            "@composer validate --strict"
        ],
        "app-fixer": "vendor/bin/php-cs-fixer fix --diff --dry-run",
        "app-psalm": "vendor/bin/psalm --config psalm.xml",
        "app-stan": "vendor/bin/phpstan analyse --configuration phpstan.neon --memory-limit 2G",
        "app-rector": "vendor/bin/rector process --dry-run --config rector.php",
        "app-twig": "vendor/bin/twig-cs-fixer lint --config=.twig-cs-fixer.php",
        "app-test": "phpunit --exclude-group=legacy",
        "app-markdown": "markdownlint-cli2",
        "app-all": [
            "@app-lint",
            "@app-fixer",
            "@app-psalm",
            "@app-stan",
            "@app-rector",
            "@app-twig",
            "@app-test",
            "@app-markdown"
        ]
    }
}
