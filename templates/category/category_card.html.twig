{% extends 'cards/card_flex.html.twig' %}
{# imports #}
{% import 'macros/_properties.html.twig' as properties %}
{% import 'macros/_icons.html.twig' as icons %}

{# parameters #}
{%- set title        = 'category.list.title' -%}
{%- set title_icon   = 'folder far' -%}
{%- set add_title    = 'category.list.add_title' -%}
{%- set show_title   = 'category.show.title' %}
{%- set edit_title   = 'category.edit.title' %}
{%- set delete_title = 'category.delete.title' %}
{%- set pdf_title    = 'category.list.pdf_title' -%}
{%- set empty_list   = 'category.list.empty' -%}

{# actions #}
{%- set object_type  = ENTITY_CATEGORY -%}
{%- set add_page     = is_granted(ATTRIBUTE_ADD, object_type) ? 'category_add' : null -%}
{%- set edit_page    = is_granted(ATTRIBUTE_EDIT, object_type) ? 'category_edit' : null -%}
{%- set delete_page  = is_granted(ATTRIBUTE_DELETE, object_type) ? 'category_delete' : null -%}
{%- set show_page    = is_granted(ATTRIBUTE_SHOW, object_type) ? 'category_show' : null -%}
{%- set pdf_page     = is_granted(ATTRIBUTE_EXPORT, object_type) ? 'category_pdf' : null -%}
{%- set product_card = is_granted(ATTRIBUTE_LIST, ENTITY_PRODUCT) ? 'product_card': null %}
{%- set default_page = app.actionEdit ? edit_page|default(show_page) : show_page|default(edit_page) -%}
{%- set row_link     = not app.actionNone and (edit_page or show_page) -%}

{% block item_title %}
{%- set item_title = item.code -%}
{%- if row_link and default_page -%}
    {%- set default_path = path(default_page, params) -%}
    <a href="{{ default_path }}" class="text-body">{{ item_title }}</a>
{%- else -%} 
    {{ item_title }}
{%- endif -%}
{% endblock %}

{% block item_property %}
{{ properties.line(item.description, false, 1) }}
{{ properties.line(item.groupCode, false, 1) }}
{%- set text = 'counters.products'|trans({count: item.countProducts}) -%}
{% if item.countProducts and product_card %}
    {%- set href = path(product_card, {'query': item.code}) -%}
    {{ properties.link(href, text, false, false, 1) }}
{% else %}
    {{ properties.line(text, false, 1) }}
{% endif %}
{% endblock %}

{% block actions %}
{% if item.countProducts and product_card %}
    {{ icons.dropdownSeparator }}
    {% set href = path(product_card, {'query': item.code}) %}
    {{ icons.dropdownItem(href, 'category.list.product_title', 'external-link-alt') }}
{% endif %}
{% endblock %}

{% block search_action -%}{%- endblock %}

{%- block toolbar_actions -%}
{{ parent() }}
{{ icons.linkTable('category_table') }}
{%- endblock -%}
