{% macro title(title, target) %}
<div class="bg-secondary-subtle border px-2 py-1 mb-2">
    <div class="row">
        <div class="col-9">
            <h6 class="mb-0">{{ title }}</h6>
        </div>
        <div class="col-3 text-end d-print-none">
            <a href="#" class="alert-link" data-bs-toggle="modal" data-bs-target="#{{ target }}" title="{{ 'dialog_raw_data.tooltip'|trans }}">
                <i class="fa-solid fa-code"></i>
            </a>
        </div>
    </div>
</div>
{% endmacro %}

{% macro value_unit(value, unit='', separator=' ') -%}
    {{ (value ~ separator ~ unit)|trim }}
{%- endmacro %}

{% macro value_temp(value, unit) -%}
    {{ _self.value_unit(value|number_format(1), unit, '') }}
{%- endmacro %}

{% macro value_humidity(value, unit) -%}
    {{ _self.value_unit(value, unit, '') }}
{%- endmacro %}

{% macro value_pressure(value, unit) -%}
    {{ _self.value_unit(value, unit) }}
{%- endmacro %}

{% macro value_speed(value, unit) -%}
    {{ _self.value_unit(value, unit) }}
{%- endmacro %}

{% macro value_no_sep(value, unit) -%}
    {{ _self.value_unit(value, unit, '') }}
{%- endmacro %}

{% macro value_rain(value, unit='') %}
{{ _self.value_unit(value|number_format(1), unit, ' ') }}
{% endmacro %}

{% macro value_wind(description, degrees, unit) %}
<span title="{{ 'openweather.fields.wind_deg_title'|trans({'%degrees%': _self.value_no_sep(degrees, unit)}) }}">
    <i class="fa-solid fa-location-arrow fa-rotate-by text-success" style="--fa-rotate-angle: {{ degrees - 45 }}deg;"></i> {{ description -}}
</span>
{% endmacro %}
