{# Macro for logs #}
{% macro format_var(value) -%}
{{- value|var_export|replace({
	'[': '<samp class="text-danger">[</samp>',
	']': '<samp class="text-danger">]</samp>',
	'"': '<samp class="text-danger">"</samp>',
	'\'': '<samp class="text-danger">\'</samp>',
	'=>': '<samp class="text-danger">=></samp>',
	',': '<samp class="text-muted">,</samp>'
    })|raw -}}
{%- endmacro %}
