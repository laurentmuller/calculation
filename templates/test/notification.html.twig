    {{ _self.checkbox('close', 'parameters.fields.message_close') }}
    {{ _self.checkbox('autohide', 'parameters.fields.message_auto_close') }}
    {{ _self.checkbox('progress', 'parameters.fields.message_progress') }}
</div>
{% endblock %}

{% block card_footer %}
{{ icons.homepage() }}
<button type="button" class="btn btn-default btn-outline-secondary">{{ 'theme.default'|trans }}</button>
{% endblock %}

{% block javascripts -%}
{{ parent() }}
{{ asset_js('js/test/notification.js') }}
{%- endblock %}
