{% extends 'cards/card_edit_center.html.twig' %}
{# parameters #}
{%- set title = 'resetting.request.title' -%}
{%- set title_description = 'resetting.request.description' -%}
{%- set title_icon = 'eraser' -%}
{%- set submit_text = 'resetting.request.submit' -%}
{%- set submit_title = 'resetting.request.submit_title' -%}
{%- set cancel_path = false -%}
{%- set form_attr = form_attr|default({})|merge({'data-check-user': url('ajax_check_user_both')}) -%}
{# actions #}
{% block actions_form %}
{{ parent() }}
<a href="{{ path('app_login') }}" class="align-self-center" title="{{ 'security.login.description'|trans }}">{{ 'security.login.submit'|trans }}</a>
{% endblock actions_form %}
{# javascripts #}
{% block javascripts %}
{% if is_js_debug %}
    {{ parent() }}
    {{ asset_js('js/extensions/password-extensions.js') }}
    {{ asset_js('js/application/user_recaptcha.js') }}
    {{ asset_js('js/application/user_request.js') }}
{% else %}
    {{ asset_js('js/compiled/user_request.js') }}
{% endif %}
{%- endblock javascripts %}
