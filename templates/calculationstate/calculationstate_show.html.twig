{% extends 'cards/card_show.html.twig' %}
{% from 'macros/_properties.html.twig' import property %}
{% from 'macros/_timestampable.html.twig' import timestampable_properties as properties %}
{# parameters #}
{%- set id = item.id -%}
{%- set title = 'calculationstate.show.title' -%}
{%- set params = route_params(app.request, id) %}
{# actions #}
{%- set edit_path = is_granted(ATTRIBUTE_EDIT, item) ? path('calculationstate_edit', params) : null -%}
{%- set delete_path = is_granted(ATTRIBUTE_DELETE, item) ? path('calculationstate_delete', params) : null -%}
{%- set cancel_path = cancel_url(app.request, id, 'calculationstate_table') -%}
{# properties #}
{% block property_body %}
{{ property('calculationstate.fields.code', item.code) }}
{{ property('calculationstate.fields.description', item.description) }}
{{ property('calculationstate.fields.editable', item.editable|boolean) }}
{{ property('calculationstate.fields.calculations', item.countCalculations|integer) }}
<tr>
    <td class="w-25">{{ 'calculationstate.fields.color'|trans }}</td>
    <td class="w-75"><span class="state-color border border-secondary" style="background-color: {{ item.color|default('transparent') }};"></span></td>
</tr>
{{ properties(item) }}
{% endblock %}
