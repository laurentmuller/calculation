{# macros #}
{% macro password_tooltips(tooltips) %}
{% if tooltips|length %}
    <div class="alert alert-info py-2 mb-0 small">
        <p class="mb-1">
            {{ 'password.constraint'|trans }}
        </p>
        <ul class="mb-0">
            {% for tooltip in tooltips %}
                <li>{{ tooltip|e }}</li>
            {% endfor %}
        </ul>
    </div>
{% endif %}
{% endmacro %}
