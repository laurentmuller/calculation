{% extends 'cards/card_edit.html.twig' %}
{% from 'macros/_timestampable.html.twig' import timestampable %}
{# parameters #}
{%- set title = new ? 'calculationstate.add.title' : 'calculationstate.edit.title' -%}
{%- set title_icon = ICON_CALCULATION_STATE -%}
{%- set page_list = 'calculationstate_table' -%}

{% block card_body %}
<div class="form-row">
    <div class="col-md-5">
        {{ form_row(form.code) }}
    </div>
    <div class="col-md-3">
        {{ form_row(form.editable) }}
    </div>
    <div class="col-md-4">
        {{ form_row(form.color) }}
    </div>
</div>
{{ form_row(form.description) }}
{% endblock %}

{% block card_footer -%}
    {{ parent() }}
    {% if not item.new %}
        <hr class="card-footer-line">
        {{ timestampable(item) }}
    {% endif %}
{% endblock %}

{% block javascripts %}
{% if app.debug %}
{{ parent() }}
{{ asset_js('js/plugins/plugin-color-picker.js') }}
{{ asset_js('js/application/calculationstate_edit.js') }}
{% else %}
{{ asset_js('js/calculationstate_edit.js') }}
{% endif %}
{% endblock %}
