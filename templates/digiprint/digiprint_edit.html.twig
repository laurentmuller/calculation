{% extends 'cards/card_edit.html.twig' %}
{# imports #}
{% import 'macros/_icons.html.twig' as icons %}

{# macros #}
{% macro printItem(item) %}
<tr>
    <td class="w-35">
        <div class="form-group">
            {{ form_widget(item.type) }}
            {{ form_widget(item.minimum, {'attr': {'aria-label': 'digiprintitem.fields.minimum'|trans}}) }}
            <em>{{ form_errors(item.minimum) }}</em>
        </div>
    </td>
    <td class="w-35">
        <div class="form-group">
            {{ form_widget(item.maximum, {'attr': {'aria-label': 'digiprintitem.fields.maximum'|trans}}) }}
            <em>{{ form_errors(item.maximum) }}</em>
        </div>
    </td>
    <td class="w-30">
        <div class="form-group">
            {{ form_widget(item.amount, {'attr': {'aria-label': 'digiprintitem.fields.amount'|trans}}) }}
            <em>{{ form_errors(item.amount) }}</em>
        </div>
    </td>
    <td class="actions pt-2 px-0 d-print-none">
        {{- icons.link('#', false, 'btn btn-sm btn-outline-danger btn-edit btn-delete d-print-none', 'times', 'digiprint.edit.delete_item') -}}
    </td>
</tr>
{% endmacro -%}

{% macro printTable(id, title, form, type, count) %}
<div class="form-row mt-3">
    <div class="col-md-12">
        <div class="row">
            <div class="col">
                <label class="control-label" for="data-table-edit">{{ title|trans }}</label>
            </div>
            <div class="col-auto text-right">
                <a href="#" class="btn-add" data-table="{{ id }}" role="button">{{ 'digiprint.edit.add_item'|trans }}</a>
            </div>
        </div>
        <hr class="mt-0 mb-2">
        <table id="{{ id }}" class="table table-borderless table-edit{% if count == 0 %} d-none{% endif %}" data-type="{{ type }}">
            <thead>
                <tr>
                    <th class="vertical-middle text-right font-weight-normal required">{{ 'digiprintitem.fields.minimum'|trans }}</th>
                    <th class="vertical-middle text-right font-weight-normal required">{{ 'digiprintitem.fields.maximum'|trans }}</th>
                    <th class="vertical-middle text-right font-weight-normal required">{{ 'digiprintitem.fields.amount'|trans }}</th>
                    <th class="actions d-print-none">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
            {% for item in form.items|filter(item => item.vars.value.type == type) -%}
                {{ _self.printItem(item) -}}            
            {% endfor -%}                
            </tbody>
        </table>
        <small id="empty-{{ id }}" class="text-muted text-right{% if count > 0 %} d-none{% endif %}">
            {{- 'digiprint.edit.empty_items'|trans -}}            
        </small>
    </div>
</div>
{% endmacro %}

{# parameters #}
{%- set title      = new ? 'digiprint.add.title' : 'digiprint.edit.title' -%}
{%- set title_icon = 'outdent' -%}
{%- set page_list  = 'digiprint_list' -%}

{% block card_body %}
{# item and prototype #}
<div class="form-row" id="prototype" data-index="{{ item_index }}" data-prototype="{{ _self.printItem(form.items.vars.prototype)|e('html_attr') }}">
    <div class="col-md-6">
        {{ form_row(form.format) }}
    </div>
    <div class="col-md-3">
        {{ form_row(form.width) }}
    </div>
    <div class="col-md-3">
        {{ form_row(form.height) }}
    </div>
</div>
{# tables #}
{{ _self.printTable('data-table-price', 'digiprint.items.price', form, 0, count_prices) }}
{{ _self.printTable('data-table-blacklit', 'digiprint.items.blacklit', form, 1, count_blackits) }}
{{ _self.printTable('data-table-replicating', 'digiprint.items.replicating', form, 2, count_replicatings) }}
{% endblock %}

{% block actions_form -%}
{{ parent() }}
<button type="button" class="btn btn-form btn-sort btn-outline-success">{{ 'digiprint.edit.sort_items'|trans }}</button>
{% endblock %}

{% block javascripts %}
{% if app.debug %}
{{ parent() }}
{{ asset_js('js/plugins/plugin-input.js') }}
{{ asset_js('js/application/digiprint_edit.js') }}
{% else %}
{{ asset_js('js/digiprint_edit.js') }}
{% endif %}
{% endblock %}
