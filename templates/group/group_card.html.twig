{% extends 'cards/card_flex.html.twig' %}
{# imports #}
{% import 'macros/_properties.html.twig' as properties %}
{% import 'macros/_icons.html.twig' as icons %}

{# parameters #}
{%- set title        = 'group.list.title' -%}
{%- set title_icon   = 'code-branch' -%}
{%- set add_title    = 'group.list.add_title' -%}
{%- set show_title   = 'group.show.title' %}
{%- set edit_title   = 'group.edit.title' %}
{%- set delete_title = 'group.delete.title' %}
{%- set pdf_title    = 'group.list.pdf_title' -%}
{%- set empty_list   = 'group.list.empty' -%}

{# actions #}
{%- set object_type  = EntityVoterInterface.ENTITY_CATEGORY -%}
{%- set add_page     = is_granted(EntityVoterInterface.ATTRIBUTE_ADD, object_type) ? 'group_add' : null -%}
{%- set edit_page    = is_granted(EntityVoterInterface.ATTRIBUTE_EDIT, object_type) ? 'group_edit' : null -%}
{%- set delete_page  = is_granted(EntityVoterInterface.ATTRIBUTE_DELETE, object_type) ? 'group_delete' : null -%}
{%- set show_page    = is_granted(EntityVoterInterface.ATTRIBUTE_SHOW, object_type) ? 'group_show' : null -%}
{%- set pdf_page     = is_granted(EntityVoterInterface.ATTRIBUTE_EXPORT, object_type) ? 'group_pdf' : null -%}
{%- set default_page = app.actionEdit ? edit_page|default(show_page) : show_page|default(edit_page) -%}
{%- set row_link     = not app.actionNone and (edit_page or show_page) -%}

{% block item_title %}
{%- set item_title = item.code -%}
{%- if row_link and default_page -%}
    {%- set default_path = path(default_page, params) -%}
    <a href="{{ default_path }}" class="text-body">{{ item_title }}</a>
{%- else -%} 
    {{ item_title }}
{%- endif -%}
{% endblock %}

{% block item_property %}
{{ properties.line(item.description, false, 1) }}
{%- set text = 'counters.margins'|trans({count: item.countMargins}) -%}
{{ properties.line(text, false, 1) }}
{%- set text = 'counters.categories'|trans({count: item.countCategories}) -%}
{{ properties.line(text, false, 1) }}
{% endblock %}

{% block search_action -%}{%- endblock %}

{%- block toolbar_actions -%}
{{ parent() }}
{{ icons.linkTable('group_table') }}
{%- endblock -%}
