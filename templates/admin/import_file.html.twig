{% extends 'cards/card_edit.html.twig' %}
{# parameters #}
{%- set title = 'swisspost.title' -%}
{%- set title_icon = 'download' -%}
{%- set title_description = 'swisspost.import.description' -%}
{%- set cancel_path = path('homepage') -%}
{# body #}
{% block card_body %}
{{ parent() }}
{% if last_import -%}
    {%- set date = last_import|locale_date('long') -%}
    <p class="mb-0 text-right text-muted small">{{ 'swisspost.import.last_import'|trans({'%date%': date}) }}</p>
{%- endif %}
{% endblock %}
{# stylesheets #}
{% block stylesheets %}
{{ parent() }}
{{ asset_css('css/fileinput.css') }}
{% endblock %}
{# javascripts #}
{% block javascripts %}
{% if app.debug %}
{{ parent() }}
{{ asset_js('js/plugins/plugin-fileinput.js') }}
{{ asset_js('js/extensions/file-input-extensions.js') }}
{{ asset_js('js/application/import_file.js') }}
{% else %}
{{ asset_js('js/import_file.js') }}
{% endif %}
{% endblock %}
