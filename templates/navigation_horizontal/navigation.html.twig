{# horizontal toolbar #}
{% from 'macros/_icons.html.twig' import icon %}
{# horizontal navigation #}
<nav id="navigation" class="navbar navbar-horizontal navbar-themed navbar-expand-md border-bottom" data-show="{{ 'index.sidebar_show'|trans }}" data-hide="{{ 'index.sidebar_hide'|trans }}">
    <button class="navbar-toggler sidebar-toggle py-1" aria-expanded="{{ (not sidebar_hide)|json_encode }}" title="{{ (sidebar_hide ? 'index.sidebar_show' : 'index.sidebar_hide')|trans }}">
        <i class="fa-solid fa-angle-left"></i>
    </button>
    <a class="navbar-brand nav-sidebar-horizontal ml-3" href="{{ path('homepage') }}" title="{{ 'index.title_help'|trans }}" style="display: {{ sidebar_hide ? 'block' : 'none' }}">
        {{- icon('home') -}}
    </a>
    <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="{{ 'index.toggle_navigation'|trans }}">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarContent">
        <ul class="navbar-nav mr-auto">
            {% if is_granted_calculation -%}
                {% set display_style = sidebar_hide ? 'block' : 'none' %}
                <li class="nav-item">
                    <a href="{{ path('calculation_table') }}" class="nav-link nav-sidebar-horizontal" style="display: {{ display_style }};">
                        {{- icon(ICON_CALCULATION, 'calculation.list.title') -}}
                    </a>
                </li>
            {% endif %}
            {% include 'navigation_horizontal/navigation_data.html.twig' %}
            {% include 'navigation_horizontal/navigation_tools.html.twig' %}
            {% include 'navigation_horizontal/navigation_chart.html.twig' %}
        </ul>
        <ul class="navbar-nav">
            {% include 'navigation_horizontal/navigation_search.html.twig' %}
            {% include 'navigation_horizontal/navigation_user.html.twig' %}
        </ul>
    </div>
</nav>
