{% extends 'cards/card_table.html.twig' %}
{% from 'macros/_icons.html.twig' import link %}
{# parameters #}
{%- set title = 'globalmargin.list.title' -%}
{%- set title_icon = ICON_GLOBAL_MARGIN -%}
{%- set object_type = ENTITY_GLOBAL_MARGIN -%}
{% block card_container_class ' col col-xl-8 offset-xl-2' %}
{# display mode #}
{% block display_mode %}
{% if allow_edit -%}
    {{- _self.item_path(path('globalmargin_edit', params), 'globalmargin.edit.title', ICON_EDIT) }}
    {{- _self.item_separator() }}
{% endif %}
{{ parent() }}
{%- endblock %}
{# global actions #}
{% block global_actions -%}
{{- _self.item_external(path('globalmargin_pdf'), 'globalmargin.list.pdf_title', ICON_PDF) }}
{{- _self.item_external(path('globalmargin_excel'), 'globalmargin.list.excel_title', ICON_EXCEL) }}
{%- endblock %}
{# edit actions #}
{% block edit_actions -%}
{{- _self.item_path(path('globalmargin_edit', params), 'globalmargin.edit.title', ICON_EDIT) }}
{%- endblock %}
{# show actions #}
{% block show_actions -%}
{{- _self.item_path(path('globalmargin_show', params), 'globalmargin.show.title', ICON_SHOW, show_class ~ ' btn-default') }}
{%- endblock %}
{# page list #}
{% block page_list %}
{{ parent() }}
{% if allow_edit -%}
    {{ link(path('globalmargin_edit'), 'common.button_edit', 'btn btn-outline-secondary', ICON_EDIT, 'globalmargin.edit.title') }}
{% endif %}
{%- endblock %}

{# custom view header #}
{% block custom_view_header -%}
{%- if allow_show -%}
    <a href="{{ path('globalmargin_show', params) }}" class="item-link text-body" title="{{ 'globalmargin.show.title'|trans }}">%minimum% - %maximum%</a>
{%- else -%}
    <span>%minimum% - %maximum%</span>
{%- endif -%}
{%- endblock %}
{# custom view body #}
{% block custom_view_body -%}
{{ _self.property_line() }}
{{ _self.property_row('globalmargin.fields.delta', '%delta%', 'text-end') }}
{{ _self.property_row('globalmargin.fields.margin', '%margin%', 'text-end') }}
{%- endblock %}
