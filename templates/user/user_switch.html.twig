{# imports #}
{% import 'macros/_icons.html.twig' as icons %}
{% if is_granted('IS_IMPERSONATOR') %}
<div class="alert alert-warning my-2" role="alert">
    <div class="row">
        <div class="col-md-7">
            {{- 'user.switch.connected'|trans({'%original%': app.token.originalToken.userIdentifier, '%current%': app.user.username})|raw -}}
        </div>
        <div class="col-md-5 text-md-right">
            {{- icons.link(path('user_table', {'_switch_user': '_exit'}), 'user.switch.exit.title', 'alert-link font-weight-normal', 'user-slash') -}}
        </div>
    </div>
</div>
{% endif %}
