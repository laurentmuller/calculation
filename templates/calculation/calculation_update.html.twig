{% extends 'cards/card_edit.html.twig' %}

{# parameters #}
{%- set title = 'calculation.update.title' -%}
{%- set title_icon = 'pencil-alt' -%}
{%- set title_description = 'calculation.update.description' -%}
{%- set cancel_path = path('homepage') -%}

{% block card_body %}
{{ parent() }}
{% if last_update %}
    {%- set date = last_update|localedatetime('long', 'short') -%}
    <hr class="mt-3 mb-0">
      <p class="mt-2 mb-0 text-right text-muted small">{{ 'calculation.update.last_update'|trans({'%date%': date}) }}</p>
{% endif %}
{% endblock %}

{% block required_form %}{% endblock %}

{% block javascripts %}
{% if app.debug %}
{{ parent() }}
{{ asset_js('js/application/validation_edit.js') }}
{% else %}
{{ asset_js('js/validation_edit.js') }}
{% endif %}
{% endblock %}
