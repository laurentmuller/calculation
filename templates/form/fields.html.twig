<div class="input-group">
    <div class="input-group-prepend">
        <span class="input-group-text"><i class="fa-solid fa-phone"></i></i></span>
    </div>
    {{- parent() -}}
</div>
{%- endblock -%}

{# prepend icon #}
{%- block fax_widget -%}
{%- set type = type|default('tel') -%}
<div class="input-group">
    <div class="input-group-prepend">
        <span class="input-group-text"><i class="fa-solid fa-fax"></i></i></span>
    </div>
    {{- block('form_widget_simple') -}}
</div>
{%- endblock -%}

{# prepend icon #}
{%- block email_widget %}
<div class="input-group">
    <div class="input-group-prepend">
        <span class="input-group-text input-group-email"><i class="fa-solid fa-at"></i></span>
    </div>
    {{- parent() -}}
</div>
{%- endblock -%}

{# use fileinput style #}
{% block file_widget -%}
{%- if thumbnail ?? false -%}
    {%- set empty_image = empty_image|default(false) -%}
    {%- set thumbnail_src = thumbnail_src|default(false) -%}
    {%- set thumbnail_alt = thumbnail_alt|default('filetype.image') -%}
    {%- if thumbnail_src -%}{%- set attr = attr|default({})|merge({'data-src': thumbnail_src}) -%}{%- endif -%}
    <div class="fileinput {{ thumbnail_src ? 'fileinput-exists' : 'fileinput-new' }}" data-provides="fileinput">
		<div class="fileinput-preview img-thumbnail" data-trigger="fileinput">
        {% if thumbnail_src or empty_image -%}
            <img alt="{{ thumbnail_alt|trans }}" title="{{ thumbnail_alt|trans }}" src="{{ thumbnail_src|default(empty_image) }}">
        {%- endif %}
		</div>
		<div>
        	<span class="btn btn-file btn-sm btn-form-sm btn-outline-secondary">
            	<span class="fileinput-new">{{ 'common.button_browse'|trans }}</span>
                <span class="fileinput-exists">{{ 'common.button_edit'|trans }}</span>
                {% set attr = attr|merge({'aria-label': thumbnail_alt|trans}) -%}
                {{- block('form_widget_simple') -}}
            </span>
            <button type="button" class="btn btn-sm btn-form-sm btn-outline-danger fileinput-exists" data-dismiss="fileinput">{{ 'common.button_delete'|trans }}</button>
        </div>
    </div>
{%- else -%}
    {%- set placeholder = attr.placeholder is defined ? (translation_domain is same as(false) ? attr.placeholder : attr.placeholder|trans({}, translation_domain)) : false -%}
    <div class="fileinput fileinput-new input-group rounded border" data-provides="fileinput">
        <div class="form-control" data-trigger="fileinput">
            <span class="fileinput-filename">{%- if placeholder -%}{{ placeholder }}{%- endif -%}</span>
        </div>
        <span class="input-group-append">
            <span class="input-group-text btn-file rounded-right" style="border-right: 0px;">
                <span class="fileinput-new">{{ 'common.button_browse'|trans }}</span>
                <span class="fileinput-exists">{{ 'common.button_edit'|trans }}</span>
                {{- block('form_widget_simple') -}}
            </span>
            <span class="input-group-text fileinput-exists" data-dismiss="fileinput" title="{{ 'common.button_delete'|trans }}">
                <i class="fa-solid fa-times"></i>
            </span>
        </span>
    </div>
{%- endif -%}
{%- endblock -%}

{# vich_image #}
{% block vich_image_widget -%}
{# file #}
{%- set uri = asset_exists(image_uri) ? image_uri : false -%}
{%- set src = uri ? asset(uri) ~ '?' ~ 'now'|date('c') : false -%}
{%- set alt = 'user.image.title' -%}
{%- set empty_image = asset('/images/avatar.png') -%}
{{- form_widget(form.file, {thumbnail: true, thumbnail_src: src, thumbnail_alt: alt, empty_image: empty_image}) -}}
{# delete #}
{% if form.delete is defined -%}
<div class="d-none">
    {{- form_widget(form.delete, {hidden: true}) -}}
</div>
{%- endif %}
{%- endblock %}

{# captcha_image #}
{% block captcha_image_widget -%}
{%- set type = type|default('text') -%}
{%- set image_title = 'captcha.title'|trans -%}
{%- set image_style = theme_dark(app.request) ? ' style="margin-top: 1px; margin-bottom: 1px;"' : '' -%}
{%- if remote|default(false) -%}
    {%- set attr = attr|merge({'data-remote': remote}) -%}
{%- endif -%}
{%- if refresh|default(false) -%}
    {%- set attr = attr|merge({'data-refresh': refresh}) -%}
{%- endif -%}
{%- set attr = attr|merge({class: (attr.class|default('') ~ ' text-lowercase')|trim}) -%}
<div class="input-group">
    <div class="input-group-prepend">
        <span class="input-group-text py-0 px-1 bg-white"{{ image_style }}>
            <img id="{{ id }}_image" name="{{ id }}_image" class="captcha-image" alt="{{ image_title }}" title="{{ image_title }}" src="{{ image }}" width="150" height="30">
        </span>
    </div>
    {{- block('form_widget_simple') -}}
    {% if refresh|default(false) %}
    <div class="input-group-append">
        <button id="{{ id }}_refresh" name="{{ id }}_refresh" class="btn btn-outline-secondary captcha-refresh" type="button" title="{{ 'captcha.refresh'|trans }}">
            <i class="fa-solid fa-sync"></i>
        </button>
    </div>
    {% endif %}
</div>
{%- endblock %}

{# simple editor #}
{% block simple_editor_row -%}
    {{- block('form_row') -}}
{%- endblock %}

{% block editor_button %}
{% set translation_domain = 'messages' %}
{% set attr_translation_parameters = [] %}
<button type="button"{% with {attr: current_action.attributes} %}{{ block('attributes') }}{% endwith %}>
    {%- if current_action.text|default(false) -%}{{- current_action.text|trans -}}{%- else -%}<i class="{{- 'fa-fw fa-solid fa-' ~ current_action.icon -}}"></i>{%- endif -%}
</button>
{% endblock %}

{% block simple_editor_widget -%}
{%- set type = type|default('hidden') -%}
{%- set editor_id = form.vars.id ~ '_editor' -%}
{%- set actions = form.vars.actions|default([]) -%}
<div class="simple-editor border" id="{{ editor_id }}" name="{{ editor_id }}">
    {% if groups|default([])|length -%}
    <div class="simple-editor-toolbar btn-toolbar d-print-none" role="toolbar" >
        {% for group, actions in groups %}
        <div class="btn-group btn-group-sm" role="group" aria-label="{{ group }}">
        {% for action in actions %}
            {% set current_action = action %}
            {% if action.actions|default([])|length %}
            <div class="btn-group btn-group-sm" role="group">
                {{ block('editor_button') }}
                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                {% for child in action.actions %}
                    {% set current_action = child %}
                    {{- block('editor_button') -}}
                {% endfor %}
                </div>
            </div>
            {% else %}
                {{- block('editor_button') -}}
            {% endif %}
        {% endfor %}
        {% if not loop.last %}<div class="border-left separator"></div>{% endif %}
        </div>
        {% endfor %}
    </div>
    {%- endif %}
    <div class="simple-editor-content border-top" contenteditable="true"></div>
    {{- block('form_widget_simple') -}}
</div>
{%- endblock %}

{%- block alpha_captcha_widget -%}
{%- set attr = attr|merge({class: (attr.class|default('') ~ ' text-uppercase text-center')|trim}) -%}
<div class="row">
    <label for="{{ id }}" class="col-sm-10 col-form-label">
        {{- question -}}
    </label>
    <div class="col-sm-2">
        {{- block('form_widget_simple') -}}
    </div>
</div>
{%- endblock -%}
