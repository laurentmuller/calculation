{% if is_granted('IS_IMPERSONATOR') %}
{% import 'macros/_icons.html.twig' as icons %}
<div class="alert alert-warning my-2" role="alert">
    <div class="row">
        <div class="col-md-8">
            {{- 'user.switch.connected'|trans({'%original%': app.token.originalToken.userIdentifier, '%current%': app.user.userIdentifier})|raw -}}
        </div>
        <div class="col-md-4 text-md-right">
            {{- icons.link(impersonation_exit_path(path('user_table')), 'user.switch.exit.title', 'alert-link font-weight-normal', 'user-slash') -}}
        </div>
    </div>
</div>
{% endif %}
