{% extends 'cards/card_delete.html.twig' %}
{# parameters #}
{%- set title = 'log.delete.title' -%}
{# body #}
{% block card_body %}
<div class="my-3">
    <p>{{- 'log.delete.message'|trans -}}</p>
    <hr>
    <table class="table table-sm table-borderless mb-0">
        <tr>
            <td class="w-25">{{ 'log.delete.file'|trans }}</td>
            <td>:</td>
            <td class="w-75">{{ file }}</td>
        </tr>
        <tr>
            <td class="w-25">{{ 'log.delete.size'|trans }}</td>
            <td>:</td>
            <td class="w-75">{{ size }}</td>
        </tr>
        <tr>
            <td class="w-25">{{ 'log.delete.entries'|trans }}</td>
            <td>:</td>
            <td class="w-75">{{ entries|integer }}</td>
        </tr>
    </table>
</div>
{% endblock %}
{# actions #}
{% block actions_form %}
{% set cancel_path = path(route|default('homepage')) %}
{{ parent() }}
{% endblock %}
