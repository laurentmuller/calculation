{# search form #}
{% from 'macros/_icons.html.twig' import icon %}
<li class="nav-item mx-2 my-auto">
    <a href="#" id="search-button-horizontal" class="nav-link" title="{{ 'search.title'|trans }}">
        {{- icon('search fa-fw') -}}
    </a>
    <form id="search-form-horizontal"
          action="{{ path('search') }}"
          class="form-inline mx-2 my-auto"
          role="search"
          novalidate="novalidate"
          style="display: none; width: 0;">
        <input type="text"
               id="search"
               name="search"
               class="form-control form-control-sm w-100"
               aria-label="{{ 'list.search_placeholder'|trans }}"
               required="required"
               minlength="2"
               autocomplete="off"
               placeholder="{{ 'search.placeholder'|trans }}"
               data-title="{{ 'search.minimum'|trans }}">
    </form>
</li>
