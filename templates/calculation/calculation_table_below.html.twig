{% extends 'calculation/calculation_table.html.twig' %}
{# parameters #}
{%- set title = 'below.title' -%}
{%- set title_icon = ICON_GLOBAL_MARGIN -%}
{%- set allow_add = false -%}
{# header #}
{% block card_header -%}
    {{ parent() }}
    <small>{{ 'below.description'|trans({'%margin%': customData.min_margin|percent}) }}</small>
{%- endblock card_header %}
{# actions #}
{% block header_actions -%}
<small>{{ 'below.count'|trans({'%calculations%': totalNotFiltered|integer}) }}</small>
{%- endblock header_actions %}
{# global actions #}
{% block global_actions -%}
{{- _self.item_external(path('calculation_below_pdf'), 'calculation.list.pdf_title', ICON_PDF) }}
{{- _self.item_external(path('calculation_below_excel'), 'calculation.list.excel_title', ICON_EXCEL) }}
{%- endblock global_actions %}
{# stylesheets #}
{% block stylesheets -%}
    {{ parent() }}
    <style nonce="{{ csp_nonce() }}">
        {{- css_border() }}
    </style>
{%- endblock stylesheets %}
