{% extends 'cards/card_edit.html.twig' %}

{# parameters #}
{%- set title = 'calculation.list.state_title' -%}
{%- set title_icon = 'calculator' -%}

{% block card_body %}
<div class="row">
    <div class="col-md-4">
        {{ form_row(form.id) }}
    </div>
    <div class="col-md-4">
        {{ form_row(form.date) }}
    </div>
    <div class="col-md-4">
        {{ form_row(form.overallTotal) }}
    </div>
</div>
{{ form_row(form.customer) }}
{{ form_row(form.description) }}
{{ form_row(form.state) }}
{% endblock %}

{% block javascripts %}
{% if app.debug %}
{{ parent() }}
{{ asset_js('js/application/validation_edit.js') }}
{% else %}
{{ asset_js('js/validation_edit.js') }}
{% endif %}
{% endblock %}
