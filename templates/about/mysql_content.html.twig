{% import 'about/_about_macro.html.twig' as tools %}
{# parameters #}
{% set enabled_values = ['On', 'Yes', 'True', 'Enabled'] %}
{% set disabled_values = ['Off', 'No', 'False', 'Disabled'] %}
{# content #}
<div class="phpversion">
    <table id="data-table-mysql" class="table table-hover table-sm mb-0">
        <tbody>
        <tr class="h">
            <td colspan="2" style="transform: rotate(0);">
                <a href="https://www.mysql.com/" target="_blank" rel="noopener noreferrer" class="stretched-link text-reset">
                   <i class="icon-mysql icon-about"></i>
                   <h1 class="p text-body">{{ 'about.version'|trans({'%version%': version}) }}</h1>
                </a>
            </td>
        </tr>
        {{ tools.headerInfo('Database') }}
        {% for key, value in database %}
            {{ tools.rowInfo(key, value) }}
        {% endfor %}
        {{ tools.headerInfo('Configuration') }}
         {% for key, value in configuration %}
             {% if value in enabled_values or value in disabled_values %}
                 {{ tools.rowInfoBoolean(key, value, value in enabled_values) }}
             {% else %}
                 {{ tools.rowInfo(key, value) }}
             {% endif %}
        {% endfor %}
        </tbody>
    </table>
</div>
