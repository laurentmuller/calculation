{% extends 'cards/card_base.html.twig' %}
{% import 'macros/_icons.html.twig' as icons %}

{# parameters #}
{%- set title = 'openweather.import.title' -%}
{%- set title_icon = 'download' -%}
{%- set title_description = 'import.results' -%}

{% block card_class -%}
{% if result %}{{ parent() }}{% else %} border-danger{% endif %}
{%- endblock %}
{% block card_header_class -%}
{% if result %}{{ parent() }}{% else %} text-white bg-danger{% endif %}
{%- endblock %}

{% block card_body %}
{%- if result %}
<p>{{ 'openweather.result.success'|trans }}</p>
<table class="table table-bordered table-sm mb-0">
    <thead>
        <tr>
            <th>{{ 'import.objects'|trans }}</th>
            <th class="text-currency">{{ 'import.errors'|trans }}</th>
            <th class="text-currency">{{ 'import.valids'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ 'import.cities'|trans }}</td>
            <td class="text-currency">{{ errors|integer }}</td>
            <td class="text-currency">{{ valids|integer }}</td>
        </tr>
        <tr>
            <th>{{ 'import.total'|trans }}</<th>
            <th class="text-currency">{{ errors|integer }}</th>
            <th class="text-currency">{{ valids|integer }}</th>
        </tr>
    </tbody>
</table>
{%- else -%}
<p class="mb-0">
    {{- 'openweather.result.failure'|trans }}{% if message is defined %} {{ message }}{% endif -%}
</p>
{%- endif %}
{% endblock %}

{% block card_footer %}
{{ icons.homepage() }}
{{ icons.link(path('openweather_search'), 'common.button_search', 'btn btn-form btn-secondary') }}
{% endblock %}
