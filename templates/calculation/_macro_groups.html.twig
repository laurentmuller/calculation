{# Macro for calculation groups #}
{% macro printGroupRow(group, editable, first, last) -%}
{# import #}
{% import 'macros/_icons.html.twig' as icons %}
{% import 'calculation/_macro_categories.html.twig' as macroCategories %}

<thead class="group"{% if editable %} data-prototype="{{ macroCategories.printCategoryRow(group.categories.vars.prototype, editable, false, false)|e('html_attr') }}"{% endif -%}>
    <tr class="drag-skip bg-light border-left border-right">
        {{ form_widget(group.group) }}
        {{ form_widget(group.code) }}
        {{ form_widget(group.position) }}
        <th class="rowlink-skip text-description text-cell pb-1" colspan="5">{{ group.code.vars.value }}</th>
        {% if editable -%}
        <th class="rowlink-skip actions d-print-none">
            {# menu #}
            <div class="dropdown">
                {%- set menu_id = 'dropdownMenuGroup_' ~ group.vars.id -%}
                {{ icons.dropdownEllipsis(menu_id) }}
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="{{ menu_id }}">
                    {{ icons.dropdownItemWithClass('#', 'calculation.edit.delete_group', ICON_DELETE, 'btn-delete-group') }}
                    {{ icons.dropdownSeparator() }}
                    {{ icons.dropdownItemWithClass('#', 'calculation.edit.add_item', ICON_PRODUCT, 'btn-default btn-add-item') }}
                    {{ icons.dropdownItemWithClass('#', 'calculation.edit.add_task', ICON_TASK, 'btn-add-task') }}
                    {{ icons.dropdownSeparator(first and last) }}
                    {{ icons.dropdownItemWithClass('#', 'calculation.edit.move_first', 'step-backward fa-rotate-90', 'btn-first-group', first) }}
                    {{ icons.dropdownItemWithClass('#', 'calculation.edit.move_up', 'chevron-up', 'btn-up-group', first) }}
                    {{ icons.dropdownItemWithClass('#', 'calculation.edit.move_down', 'chevron-down', 'btn-down-group', last) }}
                    {{ icons.dropdownItemWithClass('#', 'calculation.edit.move_last', 'step-forward fa-rotate-90', 'btn-last-group', last) }}
                </div>
            </div>
        </th>
        {%- endif %}
    </tr>
</thead>
{% for category in group.categories %}
    {{ macroCategories.printCategoryRow(category, editable, loop.first, loop.last) }}
{% endfor %}
{%- endmacro %}
