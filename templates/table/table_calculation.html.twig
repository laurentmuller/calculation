{% extends 'table/table_base.html.twig' %}

{# parameters #}
{%- set title = title|default('calculation.list.title') -%}
{%- set title_icon = title_icon|default('calculator') -%}
{%- set defer_url = defer_url|default(url('table_calculation')) -%}
{%- set object_type = ENTITY_CALCULATION -%}
{%- set attributes = attributes|default({})|merge({'danger-tooltip-selector': 'span.has-tooltip'}) -%}

{% block header_actions -%}
{% if allow_add %}<a class="add-link p-0" href="{{ path('calculation_add', params) }}">{{ 'calculation.add.title'|trans }}</a>{% endif %}
{%- endblock %}

{% block toolbar_actions -%}
{% if customData.states is defined %}
{%- set state_id = customData.state.id|default(0) -%}
<div class="input-group-append">
    <button id="stateId" data-value="{{ state_id }}" class="btn btn-sm btn-outline-secondary dropdown-input dropdown-toggle" type="button" data-toggle="dropdown" data-default="{{ 'calculation.fields.state'|trans }}" title="{{ 'calculation.list.state_help'|trans }}">
        <i class="fa-regular fa-flag"></i>&nbsp;{{- customData.state ? customData.state.code : 'calculation.fields.state'|trans -}}
    </button>
    <div class="dropdown-menu" aria-labelledby="stateId">
        {{ _self.output_dropdown('state', 0, state_id, 'datatable.all'|trans) }}
        {% for state in customData.states %}
        {{ _self.output_dropdown('state', state.id, state_id, state.code) }}
        {% endfor %}
    </div>
</div>
{% endif %}
{%- endblock %}

{% block global_actions -%}
{{- _self.item_external(path('calculation_pdf'), 'calculation.list.pdf_title', 'file-pdf far') }}
{{- _self.item_external(path('calculation_excel'), 'calculation.list.excel_title', 'file-excel far') }}
{% if is_granted('ROLE_ADMIN') -%}
    {{- _self.item_separator() }}
    {{- _self.item_path(path('admin_calculation'), 'calculation.update.title', 'pencil') }}
{%- endif %}
{%- endblock %}

{% block show_actions -%}
{{- _self.item_path(path('calculation_show', params), 'calculation.show.title', 'tv', show_class) }}
{%- endblock %}

{% block edit_actions -%}
{{- _self.item_path(path('calculation_edit', params), 'calculation.edit.title_short', 'pencil', edit_class ~ ' btn-calculation-edit') }}
{{- _self.item_path(path('calculation_state', params), 'calculation.list.state_title', 'flag far', 'btn-state') }}
{%- endblock %}

{% block delete_actions -%}
{{- _self.item_path(path('calculation_delete', params), 'calculation.delete.title', 'times', 'btn-delete') }}
{%- endblock %}

{% block add_actions -%}
{{- _self.item_separator() }}
{{- _self.item_path(path('calculation_add', params), 'calculation.add.title', 'file far', 'btn-add') }}
{{- _self.item_path(path('calculation_clone', params), 'common.button_clone', 'copy far', 'btn-clone') }}
{%- endblock %}

{% block other_actions -%}
{% if allow_export %}
{{- _self.item_separator() }}
{{- _self.item_path_external(path('calculation_pdf_id', params), 'calculation.list.pdf_single_title', 'file-pdf far', 'btn-calculation-pdf') }}
{{- _self.item_path_external(path('calculation_excel_id', params), 'calculation.list.excel_single_title', 'file-excel far', 'btn-calculation-excel') }}
{% endif %}
{%- endblock %}

{% block custom_view_card_class ' text-border' %}
{% block custom_view_header -%}
{%- if row_edit -%}
    <a href="{{ path('calculation_edit', params) }}" class="item-link text-body" title="{{ 'calculation.edit.title_short'|trans }}">%id%</a>
{%- elseif row_show -%}
    <a href="{{ path('calculation_show', params) }}" class="item-link text-body" title="{{ 'calculation.show.title'|trans }}">%id%</a>
{%- else -%}
    <span>%id%</span>
{%- endif -%}
{%- endblock %}

{% block custom_view_body -%}
{{ _self.property_value('%date% / %state.code%') }}
{{ _self.property_value('%customer%') }}
{{ _self.property_value('%description%') }}
{{ _self.property_line() }}
{{ _self.property_both('%overallMargin%', '%overallTotal%', '', 'text-right') }}
{%- endblock %}
