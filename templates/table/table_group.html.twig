{% extends 'table/table_base.html.twig' %}

{# parameters #}
{%- set title        = 'group.list.title' -%}
{%- set title_icon   = 'code-branch' -%}
{%- set defer_url    = url('table_group') -%}
{%- set save_url     = url('table_group_save') -%}
{%- set object_type  = ENTITY_GROUP -%}

{% block header_actions -%}
{% if allow_add %}<a class="add-link p-0" href="{{ path('group_add', params) }}">{{ 'group.add.title'|trans }}</a>{% endif %}
{%- endblock %}

{% block global_actions -%}
{{- _self.item_external(path('group_pdf'), 'group.list.pdf_title', 'file-pdf far') }}
{{- _self.item_external(path('group_excel'), 'group.list.excel_title', 'file-excel far') }}
{%- endblock %}

{% block show_actions -%}
{{- _self.item_path(path('group_show', params), 'group.show.title', 'tv', show_class) }}
{%- endblock %}

{% block edit_actions -%}
{{- _self.item_path(path('group_edit', params), 'group.edit.title', 'pencil-alt', edit_class) }}
{%- endblock %}

{% block delete_actions -%}
{{- _self.item_path(path('group_delete', params), 'group.delete.title', 'times', 'btn-delete') }}
{%- endblock %}

{% block add_actions -%}
{{- _self.item_separator() }}
{{- _self.item_path(path('group_add', params), 'group.add.title', 'file far', 'btn-add') }}
{{- _self.item_path(path('group_clone', params), 'common.button_clone', 'copy far', 'btn-clone') }}
{%- endblock %}
